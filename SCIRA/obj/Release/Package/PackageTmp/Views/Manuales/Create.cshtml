@model SCIRA.Models.c_contenido_manual
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Agregar";
}

<script src="~/Scripts/sharedScripts.js"></script>

<script>
    $(document).ready(function () {
        $("#archivo").change(function () {
            var filename = $("#archivo").val();
            $("#nb_archivo").val(filename);
            if (filename !== "") {
                $("#submit").removeAttr("disabled");
            } else {
                $("#submit").attr("disabled", "disabled");
            }
        });
    });

    function loading() {
        deshabilitar();
        $("body").addClass('loading');
    }

</script>


<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "loading()", id = "form1" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal well">
    <h4>@Strings.getMSG("RiesgoCreate082")</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Menu093")</label>
            <div class="col-xs-6 col-md-5">
                @Html.DropDownList("id_estructura", (IEnumerable<SelectListItem>)ViewBag.id_estructuraL, Strings.getMSG("ManualesCreate003"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("ManualesCreate004"), data_val_required = "Seleccione una Estructura para el manual" })
                @Html.ValidationMessageFor(model => model.id_nivel_manual, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @Html.EditorFor(model => model.cl_contenido_manual, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content= "@Strings.getMSG("ManualesCreate005")">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.cl_contenido_manual, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("NotificationEdit003")</label>

            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.ds_contenido_manual, new { @class = "form-control", @rows = "5", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("ManualesCreate006") })
                @Html.ValidationMessageFor(model => model.ds_contenido_manual, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Imagen")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    <input type="text" id="nb_archivo" class="form-control text-box single-line valid" readonly="readonly">
                    <div class="input-group-btn">
                        <label class="btn btn-default btn-file">
                            @Strings.getMSG("Examinar") <input type="file" id="archivo" name="archivo" style="display: none;" accept="image/jpeg,image/gif,image/png">
                        </label>
                        <button type="reset" onclick="deshabilitar()" class="btn btn-default" title="@Strings.getMSG("RiesgoCreate119")">
                            <i class="glyphicon glyphicon-remove"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-6 col-md-5">
                <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
