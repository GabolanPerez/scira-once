<script type="text/javascript">

            $(document).ready(function () {

            $("#id_impacto_monetario").change(function () {
                c_criticidad1();
            });

            $("#id_factibilidad").change(function () {
                c_criticidad1();
            });

            c_criticidad1();

            function c_criticidad1() {
                var mi = parseInt($("#id_impacto_monetario").val());
                var po = parseInt($("#id_factibilidad").val());

                console.log(mi, po);
                $("#criticidad1").val("");
                $("#criticidadAux").val("");

            //encontrar la criticidad dependiendo de ambos IDs
            @{
                foreach(var criticidad1 in ViewBag.Criticidad1)
                {
                    @:if (po == @(criticidad1.id_factibilidad) && mi == @(criticidad1.id_impacto_monetario))
                    @:{
                        @:$("#criticidad1").val("@Html.Raw(criticidad1.c_criticidad_normatividad.nb_criticidad_normatividad)");
                        @:$("#criticidadAux").val("@Html.Raw(criticidad1.c_criticidad_normatividad.nb_criticidad_normatividad)");
                    @:}
                }
            }

            };
        });
</script>


