<script src="~/Scripts/sharedScripts.js"></script>

<script>
    $(document).ready(function () {
        $('#formAux .selectpicker').selectpicker({
            style: 'btn-default',
            liveSearch: 'true',
            noneSelectedText: '@Strings.getMSG("UsuarioCreate042")',
            selectAllText: '@Strings.getMSG("ManualesCreate014")',
            actionsBox: 'true',
            deselectAllText: '@Strings.getMSG("Deseleccionar todos")',
            selectAllText: '@Strings.getMSG("Seleccionar todos")',
            selectedTextFormat: 'count > 1',
            size: 'auto',
            countSelectedText: "{0} @Strings.getMSG("OBS")"
        });

        var mpsI = ($('#mps option').length + " items");
        var psI = ($('#ps option').length + " items");
        var spsI = ($('#sps option').length + " items");
        var ctrsI = ($('#ctrs option').length + " items");
        var indsI = ($('#inds option').length + " items");
        var ficsI = ($('#fics option').length + " items");
        var oficiosI = ($('#oficios option').length + " items");
        var externaI = ($('#externa option').length + " items");
        var internaI = ($('#interna option').length + " items");
        var otrosI = ($('#otros option').length + " items");
        var planesI = ($('#planes option').length + " items");
        var incidenciasI = ($('#incidencias option').length + " items");
        var seguimientosI = ($('#seguimientos option').length + " items");

        if (mpsI == "0 items") {
            $(".mpsBOX").attr("hidden", "hidden");
        }
        if (psI == "0 items") {
            $(".psBOX").attr("hidden", "hidden");
        }
        if (spsI == "0 items") {
            $(".spsBOX").attr("hidden", "hidden");
        }
        if (ctrsI == "0 items") {
            $(".ctrsBOX").attr("hidden", "hidden");
        }
        if (indsI == "0 items") {
            $(".indsBOX").attr("hidden", "hidden");
        }
        if (ficsI == "0 items") {
            $(".ficsBOX").attr("hidden", "hidden");
        }
        if (oficiosI == "0 items") {
            $(".oficiosBOX").attr("hidden", "hidden");
        }
        if (externaI == "0 items") {
            $(".externaBOX").attr("hidden", "hidden");
        }
        if (internaI == "0 items") {
            $(".internaBOX").attr("hidden", "hidden");
        }
        if (otrosI == "0 items") {
            $(".otrosBOX").attr("hidden", "hidden");
        }
        if (planesI == "0 items") {
            $(".planesBOX").attr("hidden", "hidden");
        }
        if (incidenciasI == "0 items") {
            $(".incidenciasBOX").attr("hidden", "hidden");
        }
        if (seguimientosI == "0 items") {
            $(".seguimientosBOX").attr("hidden", "hidden");
        }
    });
</script>

