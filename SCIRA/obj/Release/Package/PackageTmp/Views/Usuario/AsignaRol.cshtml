@model SCIRA.ViewModels.AsignaRolUsuarioViewModel
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
@{
    ViewBag.Title = "Asignar Roles";
}

<script src="~/Scripts/sharedScripts.js"></script>
<link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/MSInitialize.js"></script>

<h2>@Strings.getMSG("Asignar Roles")</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("UsuarioCreate041") @ViewBag.nb_usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_usuario)

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("UsuarioCreate039")</label>
                <div class="col-xs-6 col-md-5">

                    <div class="input-group">
                        @Html.ListBox("id_rol", (MultiSelectList)ViewBag.roles, htmlAttributes: new { @class = "form-control selectpicker" })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("UsuarioCreate040")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "Usuario", "", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}