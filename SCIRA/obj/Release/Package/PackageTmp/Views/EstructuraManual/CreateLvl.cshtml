@model SCIRA.Models.c_nivel_manual
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Agregar";
}
<script src="~/Scripts/sharedScripts.js"></script>


<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { onsubmit = "deshabilitar()" })) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.id_estructura_manual)
    
    <div class="form-horizontal well">
        <h4>@Strings.getMSG("EstructuraManualCreate004") @ViewBag.cl_estructura_manual </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_nivel_manual, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atención")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("EstructuraManualCreate005")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_nivel_manual, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Nombre")</label>

                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_nivel_manual, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atención")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("EstructuraManualCreate006")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_nivel_manual, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", new { id = Model.id_estructura_manual }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}