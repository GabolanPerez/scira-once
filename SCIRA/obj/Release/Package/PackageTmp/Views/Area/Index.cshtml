@model IEnumerable<SCIRA.Models.c_area>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = @Strings.getMSG("Áreas");
}

<h2>@Strings.getMSG("Areas")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", Strings.getMSG("Area"), new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Area")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_area)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id_area })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_area })">
                        <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
