<script>

    $(document).ready(function () {
        RenderView();
    });

    function RenderView() {
        $("#p0").html($("#area1").val());
    }

    function RenderHead() {
        $("#h0").html($("#head").val());
    }

    function RenderSubject() {
        $("#s0").html($("#subject").val());
    }
    function showView() {
        $("#shView").hide();
        $("#viewBox").show();
    }
    function hideView() {
        $("#shView").show();
        $("#viewBox").hide();
    }


    function checkTarget() {

        var u1 = $("#controlR").val();
        var u2 = $("#indicadorR").val();
        var u3 = $("#oficioR").val();
        var u4 = $("#informeR").val();
        var u5 = $("#incidenciaR").val();
        var u6 = $("#planesR").val();
        var u7 = $("#fichasR").val();
        var u8 = $("#users").val();
        var u9 = $("#entidadR").val();
        var u10 = $("#macroProcesoR").val();
        var u11 = $("#subProcesoR").val();
        var u12 = $("#procesoR").val();

        if (u1 != null
            || u2 != null
            || u3 != null
            || u4 != null
            || u5 != null
            || u6 != null
            || u7 != null
            || u8 != null
            || u9 != null
            || u10 != null
            || u11 != null
            || u12 != null
        ) {
            $("#form1").submit();



            $.ajax({
                cache: false,
                type: "POST",
                url: "@(Url.Action("WriteMessage", "MassiveNotification", null))",
                data: $("#form1").serialize(),
                success: function (data) {

                    if (data == "True") {
                        toastr.success("@Strings.getMSG("MassiveNotificationWriteMessage042")");
                    } else {
                        toastr.error("@Strings.getMSG("AuditoriaEditSeguimientoObservaciones009")");
                    }

                    $("#head").val("Notificaciones SCIRA");
                    $("#subject").val("");
                    $("#area1").val("");

                    RenderView();
                    RenderHead();
                    RenderSubject();

                    $("#controlR").val([]);
                    $("#indicadorR").val([]);
                    $("#oficioR").val([]);
                    $("#informeR").val([]);
                    $("#incidenciaR").val([]);
                    $("#planesR").val([]);
                    $("#users option:selected").removeAttr("selected");

                },
                error: function (xhr, ajaxOptions, thrownError) {
                    toastr.error("@Strings.getMSG("AuditoriaEditSeguimientoObservaciones009")");
                }
            });
        } else {
            toastr.error("@Strings.getMSG("MassiveNotificationWriteMessage043")");
        }
    }
    var areaId = "area1";




</script>



