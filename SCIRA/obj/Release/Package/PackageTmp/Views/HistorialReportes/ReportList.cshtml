@model IEnumerable<SCIRA.ViewModels.HistoricReportViewModel>
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Historíal de reportes";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

    int TotalReports = Model.Count();
}

<h2>@Strings.getMSG("HistorialReportesReportList001") @ViewBag.folder</h2>

<div class="row">
    <div class="form-group">
        <div class="col-xs-6 col-md-5">
            @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>

<table class="results table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("HistorialReportesReportList002")</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nb_reporte</td>
                <td>
                    <center>
                        <a href="@Url.Action("ShowRep", new { repName = item.file_name,folder = ViewBag.folder})">
                            <i class="glyphicon glyphicon-file" title="@Strings.getMSG("Ver Reporte")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
