@model SCIRA.Models.c_ds_evento

@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Borrar</h2>

<h3>¿Borrar el registro?</h3>
<div>
    <h4>Descripción de Evento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Clave
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_ds_evento)
        </dd>

        <dt>
            Descripción del Evento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ds_evento)
        </dd>

    </dl>

    @if (ViewBag.RR.Count > 0)
    {

        <h4>Para poder eliminar éste registro, es necesario eliminar los siguientes elementos:</h4>

        <table id="results" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Catálogo</th>
                    <th>Clave del Registro</th>
                    <th>Nombre del Registro</th>
                    <th width="40"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.RR)
                {
                    <tr>
                        <td style="white-space: nowrap">
                            @(item.nb_catalogo)
                        </td>
                        <td>
                            @(item.cl_registro)
                        </td>
                        <td>
                            @(item.nb_registro)
                        </td>
                        <td style="white-space: nowrap">
                            <center>
                                <a href="@Url.Action(item.accion,item.controlador, new { id = item.id_registro,redirect = "DescripcionEvento/Delete/" + Model.id_ds_evento})">
                                    <i class="glyphicon glyphicon-trash" title="Borrar"></i>
                                </a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (ViewBag.RR.Count == 0)
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-primary" />
            |
            @Html.ActionLink("Regresar", "Return", "Utilidades", new { catalogo = 53 }, new { @class = "btn btn-default btn-sm" })
        </div>
        }
    }
    else
    {
        <div>
            @Html.ActionLink("Regresar", "Return", "Utilidades", new { catalogo = 53 }, new { @class = "btn btn-default btn-sm" })
        </div>
    }
</div>
