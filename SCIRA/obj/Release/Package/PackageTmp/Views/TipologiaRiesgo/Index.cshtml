@model IEnumerable<SCIRA.Models.c_tipologia_riesgo>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Tipología de Riesgo";
}

<h2>@Strings.getMSG("Menu022")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Strings.getMSG("Clave")
            </th>
            <th>
                @Strings.getMSG("Nombre")
            </th>
            <th>
                @Strings.getMSG("Menu021")
            </th>
            <th width="60"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_tipologia_riesgo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_tipologia_riesgo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_sub_clase_tipologia_riesgo.nb_sub_clase_tipologia_riesgo)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_tipologia_riesgo })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_tipologia_riesgo })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
