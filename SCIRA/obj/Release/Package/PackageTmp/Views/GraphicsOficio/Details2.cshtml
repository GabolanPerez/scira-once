@model IEnumerable<SCIRA.Models.k_incidencia>
@using SCIRA.Utilidades

<script src="~/Scripts/sharedScripts.js"></script>
<script>
    $(document).ready(function () {
        initTables("#modalB");
    });
</script>

<table class="results table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Strings.getMSG("Entidad")</th>
            <th>@Strings.getMSG("MCSubProcesoIndex002")</th>
            <th>@Strings.getMSG("GraphicsOficioIndex018")</th>
            <th>@Strings.getMSG("GraphicsOficioIndex019")</th>
            <th>@Strings.getMSG("SubProcesoCreate018")</th>
            <th>@Strings.getMSG("Responsable")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string tipo = item.k_objeto.tipo_objeto == 1 ? @Strings.getMSG("PendientesVerTodoIndex009") : item.k_objeto.tipo_objeto == 2 ? @Strings.getMSG("GraphicsOficioIndex020") : @Strings.getMSG("GraphicsOficioIndex021");
            <tr>
                <td>
                    @item.k_objeto.c_entidad.nb_entidad
                </td>
                <td>
                    @tipo
                </td>
                <td>
                    @item.k_objeto.nb_objeto
                </td>
                <td>
                    @item.id_incidencia
                </td>
                <td>
                    @item.ds_incidencia
                </td>
                <td>
                    @item.c_usuario.nb_usuario
                </td>
            </tr>
        }
    </tbody>
</table>