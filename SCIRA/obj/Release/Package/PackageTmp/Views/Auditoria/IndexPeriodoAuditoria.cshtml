@model IEnumerable<SCIRA.Models.c_periodo_auditoria>
@using SCIRA.Utilidades 
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@{
    ViewBag.Title = @Strings.getMSG("AuditoriaIndexPeriodoAuditoria002");
}

<h2>@Strings.getMSG("AuditoriaIndexPeriodoAuditoria002")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "CreatePeriodoAuditoria", "Auditoria", new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("AuditoriaIndexPeriodoAuditoria001")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_periodo_auditoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_periodo_auditoria)
                </td>
                <td>
                    <a href="@Url.Action("EditPeriodoAuditoria", new { id = item.id_periodo_auditoria })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                    </a> |
                    <a href="@Url.Action("DeletePeriodoAuditoria", new { id = item.id_periodo_auditoria })">
                        <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
