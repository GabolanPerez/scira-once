@model SCIRA.Models.c_estatus_programa_trabajo
@using SCIRA.Utilidades
@{
    ViewBag.Title = @Strings.getMSG("Borrar");
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("Menu101")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Strings.getMSG("Clave")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_estatus_programa_trabajo)
        </dd>

        <dt>
            @Strings.getMSG("Nombre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_estatus_programa_trabajo)
        </dd>

    </dl>

    @if (Model.k_programa_trabajo.Count < 0)
    {
        <p class="text-danger">@Strings.getMSG("AuditoriaDeletePruebaAuditoria002")</p>
    }
    else
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" />
                |
                @Html.ActionLink(Strings.getMSG("Regresar"), "IndexEstatusPrograma", null, new { @class = "btn btn-default btn-sm" })
            </div>
        }
    }

</div>
