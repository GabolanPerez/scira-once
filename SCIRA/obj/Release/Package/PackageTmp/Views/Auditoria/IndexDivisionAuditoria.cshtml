@model IEnumerable<SCIRA.Models.c_division_auditoria>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = @Strings.getMSG("Menu160");
}

<h2>@Strings.getMSG("Menu160")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "CreateDivisionAuditoria", "Auditoria", new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th width="100"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_division_auditoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ds_division_auditoria)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("EditDivisionAuditoria", new { id = item.id_division_auditoria })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("AsignaUsuariosDivisionAuditoria", new { id = item.id_division_auditoria})">
                            <i class="fa fa-users fa-lg" title="@Strings.getMSG("Asignar Usuarios")"></i>
                        </a> |
                        <a href="@Url.Action("DeleteDivisionAuditoria", new { id = item.id_division_auditoria })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
