@model SCIRA.Models.c_usuario
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("Usuario")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Strings.getMSG("Clave")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_usuario)
        </dd>

        <dt>
            @Strings.getMSG("Nombre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_usuario)
        </dd>

        <dt>
            @Strings.getMSG("UsuarioCreate016")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            @Strings.getMSG("UsuarioCreate017")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.e_mail_principal)
        </dd>

        <dt>
            @Strings.getMSG("UsuarioCreate018")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.e_mail_alterno)
        </dd>

        <dt>
            @Strings.getMSG("UsuarioDelete002")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.no_telefono)
        </dd>

        <dt>
            @Strings.getMSG("UsuarioIndex001")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.esta_activo)
        </dd>

        <dt>
            @Strings.getMSG("UsuarioCreate007")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.es_super_usuario)
        </dd>

        <dt>
            @Strings.getMSG("UsuarioCreate008")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.solo_lectura)
        </dd>

        <dt>
            @Strings.getMSG("UsuarioDelete001")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_puesto)
        </dd>

        <dt>
            @Strings.getMSG("Area")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_area.nb_area)
        </dd>

    </dl>

    @if (ViewBag.RR.Count > 0)
    {

        <h4>@Strings.getMSG("EntidadDelete003")</h4>

        <table id="results" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Strings.getMSG("Catalogo")</th>
                    <th>@Strings.getMSG("EntidadDelete004")</th>
                    <th>@Strings.getMSG("EntidadDelete005")</th>
                    <th width="40"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.RR)
                {
                    <tr>
                        <td style="white-space: nowrap">
                            @(item.nb_catalogo)
                        </td>
                        <td>
                            @(item.cl_registro)
                        </td>
                        <td>
                            @(item.nb_registro)
                        </td>
                        <td style="white-space: nowrap">
                            <center>
                                <a href="@Url.Action(item.accion,item.controlador, new { id = item.id_registro,redirect = "Usuario/Delete/" + Model.id_usuario})">
                                    <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                                </a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (ViewBag.RR.Count == 0)
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" />
                |
                @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 43 }, new { @class = "btn btn-default" })
            </div>
        }
    }
    else
    {
        <div>
            @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 43 }, new { @class = "btn btn-default" })
        </div>
    }
</div>
