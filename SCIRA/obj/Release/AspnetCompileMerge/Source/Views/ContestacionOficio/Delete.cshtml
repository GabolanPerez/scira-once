@model SCIRA.Models.r_contestacion_oficio
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar Contestación";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<link href="~/Content/AnimacionCarga.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>
<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>
<script src="~/Scripts/Certificacion.js"></script>

<script>
    $("document").ready(function () {
        $("#aviso").modal('show');
    });

    function loading() {
        deshabilitar();
        $("body").addClass('loading');
    }
</script>

<div class="form-horizontal well">
    <h4>@Strings.getMSG("ContestacionOficioIndex009") @Model.k_objeto.nb_objeto</h4>
    <hr />

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ContestacionOficioContestarOficioCreate001")</label>
            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.inicio_parrafo, new { @class = "form-control", @rows = "3", @title = "", data_toggle = "popover", data_trigger = "hover", data_content = "", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.inicio_parrafo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ContestacionOficioContestarOficioCreate002")</label>
            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.final_parrafo, new { @class = "form-control", @rows = "3", @title = "", data_toggle = "popover", data_trigger = "hover", data_content = "", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.final_parrafo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input hidden name="id" value="@Model.id_contestacion">

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }




</div>