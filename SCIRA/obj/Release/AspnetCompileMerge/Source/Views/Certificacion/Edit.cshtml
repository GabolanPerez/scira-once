                        </label>
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("RiesgoCreate119")" onclick="ResetFileName(3)">
                            <i class="glyphicon glyphicon-remove"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("CertificacionInforme021")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @if (ViewBag.nb_a4 != null)
                    {
                        <input type="text" id="nb_a4" name="nb_archivo_4" class="form-control text-box single-line valid" readonly="readonly" value="@ViewBag.nb_a4">
                    }
                    else
                    {
                        <input type="text" id="nb_a4" name="nb_archivo_4" class="form-control text-box single-line valid" readonly="readonly">
                    }
                    <div class="input-group-btn">
                        <label class="btn btn-default btn-file">
                            @Strings.getMSG("Examinar") <input type="file" id="f4" name="file4" style="display: none;" onchange="FileName(4)">
                        </label>
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("RiesgoCreate119")" onclick="ResetFileName(4)">
                            <i class="glyphicon glyphicon-remove"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("CertificacionInforme022")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @if (ViewBag.nb_a5 != null)
                    {
                        <input type="text" id="nb_a5" name="nb_archivo_5" class="form-control text-box single-line valid" readonly="readonly" value="@ViewBag.nb_a5">
                    }
                    else
                    {
                        <input type="text" id="nb_a5" name="nb_archivo_5" class="form-control text-box single-line valid" readonly="readonly">
                    }
                    <div class="input-group-btn">
                        <label class="btn btn-default btn-file">
                            @Strings.getMSG("Examinar") <input type="file" id="f5" name="file5" style="display: none;" onchange="FileName(5)">
                        </label>
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("RiesgoCreate119")" onclick="ResetFileName(5)">
                            <i class="glyphicon glyphicon-remove"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-6 col-md-5">
                <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                @Html.ActionLink(Strings.getMSG("Regresar"), "Certificados", "Certificacion", new { id = Model.id_control }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}