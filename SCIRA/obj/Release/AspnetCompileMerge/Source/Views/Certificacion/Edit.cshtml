            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @Html.EditorFor(model => model.cl_certificacion_control, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("CertificacionCertificar007")">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.cl_certificacion_control, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("PeriodoCertificacionIndex002")</label>
            <div class="col-xs-6 col-md-5">
                <input class="form-control text-box single-line" disabled="disabled" type="text" value="@ViewBag.nb_periodo_certificacion">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("CertificacionCertificar002")</label>
            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.ds_procedimiento_certificacion, new { @class = "form-control", @rows = "3", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("CertificacionCertificar008") })
                @Html.ValidationMessageFor(model => model.ds_procedimiento_certificacion, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Menu010")</label>
            <div class="col-xs-6 col-md-5">
                @Html.DropDownList("id_tipo_evaluacion", null, Strings.getMSG("CertificacionCertificar017"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("CertificacionCertificar009")})
