<div class="form-horizontal well">
    <h4>@Strings.getMSG("CertificacionInforme027") @ViewBag.nb_control</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_certificacion_control)
    @Html.HiddenFor(mode => Model.id_control)
    @Html.HiddenFor(model => model.id_periodo_certificacion)
    @Html.HiddenFor(model => model.no_partidas_minimo)
    @Html.HiddenFor(model => model.no_partidas_semestre1)
    @Html.HiddenFor(model => model.no_partidas_semestre2)

