                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("PruebaAutoEvaluacionIndex003")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    <input class="form-control text-box single-line" disabled="disabled" type="text" value="@Model.no_partidas_semestre2">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("CertificacionCertificar010")">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("CertificacionCertificar003")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @Html.EditorFor(model => model.no_pruebas_realizadas, new { htmlAttributes = new { @class = "form-control", data_val_number = "Este campo debe ser numérico" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("CertificacionCertificar011")">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.no_pruebas_realizadas, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row class1">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("CertificacionInforme028")</label>
            <div class="col-xs-3 col-md-2">
                <div class="input-group">
                    @Html.EditorFor(model => model.tiene_funcionamiento_efectivo, new { htmlAttributes = new { data_toggle = "toggle", data_on = Strings.getMSG("UsuarioIndex004"), data_off = Strings.getMSG("UsuarioIndex005"), data_width = "140" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("CertificacionCertificar012")">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

