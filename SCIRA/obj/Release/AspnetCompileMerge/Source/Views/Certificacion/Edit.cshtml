            <div class="col-xs-3 col-md-2">
                <div class="input-group">
                    @Html.EditorFor(model => model.tiene_disenio_efectivo, new { htmlAttributes = new { data_toggle = "toggle", data_on = Strings.getMSG("UsuarioIndex004"), data_off = Strings.getMSG("UsuarioIndex005"), data_width = "140" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("CertificacionCertificar013")">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("CertificacionCertificar006")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @if (ViewBag.nb_a1 != null)
                    {
                        <input type="text" id="nb_a1" name="nb_archivo_1" class="form-control text-box single-line valid" readonly="readonly" value="@ViewBag.nb_a1">
                    }
                    else
                    {
                        <input type="text" id="nb_a1" name="nb_archivo_1" class="form-control text-box single-line valid" readonly="readonly">
                    }
                    <div class="input-group-btn">
                        <label class="btn btn-default btn-file">
                            @Strings.getMSG("Examinar") <input type="file" id="f1" name="file1" style="display: none;" onchange="FileName(1)">
                        </label>
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("RiesgoCreate119")" onclick="ResetFileName(1)">
                            <i class="glyphicon glyphicon-remove"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("CertificacionInforme019")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
