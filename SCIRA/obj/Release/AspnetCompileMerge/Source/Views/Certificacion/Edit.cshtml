            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    <input class="form-control text-box single-line" disabled="disabled" type="text" value="@Model.no_partidas_minimo">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("CertificacionCertificar010")">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

