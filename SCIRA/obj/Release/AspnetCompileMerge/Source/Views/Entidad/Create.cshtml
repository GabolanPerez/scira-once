@model SCIRA.Models.c_entidad
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Agregar Entidad";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}



<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>
<script>
    $("document").ready(function () {
        $("#aviso").modal('show');
    });
</script>

<div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h2 class="modal-title" id="gridModalLabel" style="color: #fff;">@Strings.getMSG("Aviso")</h2>
                </center>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <table class="table table-hover table-responsive table-striped table-bordered">
                    <thead>
                        <tr>
                            <th colspan="2">
                                <center>@Strings.getMSG("antesDeLlenar")</center>
                            </th>
                        </tr>
                        <tr>
                            <th width="120">
                                <center>@Strings.getMSG("Campo")</center>
                            </th>
                            <th>
                                <center>@Strings.getMSG("Catalogo")</center>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--Inicio de una fila-->
                        <tr>
                            <td>
                                <center>
                                    @Strings.getMSG("Responsable")
                                </center>
                            </td>
                            <td>
                                <center>
                                    @Strings.getMSG("EntidadCreate001")
                                </center>
                            </td>
                        </tr>
                        <!--final de la fila-->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Strings.getMSG("Entendido")</button>
            </div>
        </div>
    </div>
</div>


<button class="btn btn-circle btn-default pull-right" title="Tutorial" onclick="runTutorial();"><i class="fa fa-question fa-lg"></i></button>
<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm("Create", "Entidad", FormMethod.Post, new { onsubmit = "deshabilitar()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("Entidad")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_entidad, new { htmlAttributes = new { @maxlength = "2", @class = "form-control" } })
                        <div class="input-group-btn helper">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("EntidadCreate006")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_entidad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Nombre")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_entidad, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn dropup">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("EntidadCreate007")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_entidad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Responsable")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownListFor(model => model.id_responsable, (IEnumerable<SelectListItem>)ViewBag.id_responsable, Strings.getMSG("EntidadCreate002"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("EntidadCreate008") })
                    @Html.ValidationMessageFor(model => model.id_responsable, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "Entidad", new { @class = "btn btn-default return" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script>
