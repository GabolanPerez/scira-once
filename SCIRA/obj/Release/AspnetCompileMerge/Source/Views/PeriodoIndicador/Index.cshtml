@model IEnumerable<SCIRA.Models.c_periodo_indicador>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@{
    ViewBag.Title = "Periodos de Indicadores";
}

<h2>@Strings.getMSG("PeriodoIndicadorIndex001")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", "PeriodoIndicador", new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("PeriodoIndicadorIndex002")</th>
            <th>@Strings.getMSG("IndicadorIndex001")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_periodo_indicador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_periodo_indicador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.esta_activo)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_periodo_indicador })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a>
                        |
                        <a href="@Url.Action("Delete", new { id = item.id_periodo_indicador })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
