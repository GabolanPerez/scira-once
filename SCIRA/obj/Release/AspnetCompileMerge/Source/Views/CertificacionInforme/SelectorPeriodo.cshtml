@model IEnumerable<SCIRA.Models.c_periodo_certificacion>


<script src="~/Scripts/sharedScripts.js"></script>
<script>
    $(document).ready(function () {
        @if(ViewBag.title != null)
        {
        @:menuModal.setTitle("@ViewBag.title");
        }
    });
</script>


<style>
    .periodsGrid {
        display: grid;
        grid-gap: 1rem;
        grid-auto-rows: 10rem;
        grid-template-columns: repeat(auto-fit,minmax(min(100%,25rem),1fr))
    }
</style>



<div class="periodsGrid">
    @foreach (var item in Model)
    {
        <div class="card hover" onclick="goToPeriod(@item.id_periodo_certificacion);">
            <div class="card-header text-center">
                @item.anio
            </div>
            <div class="card-body text-center align-content-center">
                @item.nb_periodo_certificacion
            </div>
        </div>
    }


</div>