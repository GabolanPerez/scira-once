@model SCIRA.ViewModels.AgregarProcesoViewModel
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Agregar Proceso";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>
<script>
    $("document").ready(function () {
        $("#aviso").modal('show');
    });
</script>

<div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h2 class="modal-title" id="gridModalLabel" style="color: #fff;">@Strings.getMSG("Aviso")</h2>
                </center>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <table class="table table-hover table-responsive table-striped table-bordered">
                    <thead>
                        <tr>
                            <th colspan="2">
                                <center>@Strings.getMSG("antesDeLlenar")</center>
                            </th>
                        </tr>
                        <tr>
                            <th width="120">
                                <center>@Strings.getMSG("Campo")</center>
                            </th>
                            <th>
                                <center>@Strings.getMSG("Catalogo")</center>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--Inicio de una fila-->
                        <tr>
                            <td>
                                <center>
                                    @Strings.getMSG("CertificacionInforme036")
                                </center>
                            </td>
                            <td>
                                <center>
                                    @Strings.getMSG("MacroProcesoCreate001")
                                </center>
                            </td>
                        </tr>
                        <!--final de la fila-->
                        <tr>
                            <td>
                                <center>
                                    @Strings.getMSG("MacroProcesoCreate014")
                                </center>
                            </td>
                            <td>
                                <center>
                                    @Strings.getMSG("MacroProcesoCreate015")
                                </center>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <center>
                                    @Strings.getMSG("MacroProcesoCreate009")
                                </center>
                            </td>
                            <td>
                                <center>
                                    @Strings.getMSG("EntidadCreate001")
                                </center>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Strings.getMSG("Entendido")</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $("#id_entidad").change(function () {
            var selectedItem = $(this).val();
            var ddlStates = $("#id_macro_proceso");
            var statesProgress = $("#states-loading-progress");
            statesProgress.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneMacroProcesos"))",
                data: { "IdEntidad": selectedItem },
                success: function (data) {
                    ddlStates.html('');
                    ddlStates.append($('<option></option>').val(null).html("@Strings.getMSG("ProcesoCreate002")"))
                    $.each(data, function (id, option) {
                        ddlStates.append($('<option></option>').val(option.id).html(option.name));
                    });
                    statesProgress.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Error al recuperar Macro Procesos.');
                    statesProgress.hide();
                }
            });
        });
    });

    $(document).ready(function () {
        //cargar el codigo numerico cuando hay un error de validacion
        var clave = $("#cl_proceso").val();
        var len = clave.length;
        clave = clave.substr(1, (len - 1));

        $("#aux").val(clave);

        $("#aux").keyup(function () {
            construyeClave();
        });
    });

    function construyeClave() {
        var numero = $("#aux").val();
        var clavef;
        clavef = "P" + numero;
        $("#cl_proceso").val(clavef);
    }
</script>

<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm("Agregar", "Proceso", FormMethod.Post, new { onsubmit = "deshabilitar()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("P")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Entidad")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownListFor(model => model.id_entidad, Model.Entidades, Strings.getMSG("MacroProcesoCreate002"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("ProcesoCreate006") })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                @* ---------------------------------------------------------------------------------------------- *@
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MP")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownListFor(model => model.id_macro_proceso, Model.MacroProcesos, Strings.getMSG("ProcesoCreate002"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("ProcesoCreate007") })
                    <span id="states-loading-progress" style="display: none;">@Strings.getMSG("EventoRiesgoCreate010")</span>
                    @Html.ValidationMessageFor(model => model.id_macro_proceso, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        <div class="input-group-btn">
                            <button type="button" id="clave" class="btn btn-default" >@Strings.getMSG("PP")</button>
                        </div>
                        @Html.EditorFor(model => model.cl_proceso, new { htmlAttributes = new { @class = "form-control", @type="hidden" } })
                        <input type="text" id="aux" class="form-control text-box single-line valid">
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ProcesoCreate008")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_proceso, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("P")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_proceso, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("MacroProcesoCreate010")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_proceso, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Responsable")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownListFor(model => model.id_responsable, (IEnumerable<SelectListItem>)ViewBag.id_responsable, Strings.getMSG("EntidadCreate002"), htmlAttributes: new { @class = "form-control", @title = "Atención", data_trigger = "hover", data_toggle = "popover", data_content = "El responsable del Proceso deberá seleccionarse a través del combo y en caso de no existir deberá primeramente darse de alta en el catálogo de usuarios." })
                    @Html.ValidationMessageFor(model => model.id_responsable, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit"/>
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "Proceso", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
