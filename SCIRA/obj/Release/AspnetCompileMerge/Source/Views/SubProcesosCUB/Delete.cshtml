@model SCIRA.ViewModels.ListaSubProcesosCUBViewModel
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("SubProcesosCUBSPCUBDelete001")</h3>
<div>
    <h4>@Strings.getMSG("Menu091")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Strings.getMSG("SubProcesosCUBIndex001")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ruta_sub_proceso)
        </dd>

        <dt>
            @Strings.getMSG("SP")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cn_sub_proceso)
        </dd>

        <dt>
            @Strings.getMSG("SubProcesosCUBIndex002")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ruta_normatividad)
        </dd>

        <dt>
            @Strings.getMSG("Menu015")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_normatividad)
        </dd>

        <dt>
            @Strings.getMSG("SubProcesosCUBIndex003")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nivel_normatividad)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <input type="text" hidden name="idSP" id="idSP" value="@Model.id_sub_proceso">
        <input type="text" hidden name="idNM" id="idNM" value="@Model.id_normatividad">

        <div class="form-actions no-color">
            <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" /> |
            @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
