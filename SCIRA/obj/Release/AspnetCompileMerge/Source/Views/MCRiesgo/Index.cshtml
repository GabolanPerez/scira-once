@model IEnumerable<SCIRA.Models.c_meta_campo>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Meta Campos Riesgo";
    string aux1 = "";
}


<h2>@Strings.getMSG("Menu027")</h2>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th class="search">@Strings.getMSG("MCSubProcesoIndex002")</th>
            <th class="search">@Strings.getMSG("MCSubProcesoIndex003")</th>
            <th class="search">@Strings.getMSG("MCSubProcesoIndex004")</th>
            <th class="search">@Strings.getMSG("MCSubProcesoIndex005")</th>
            <th class="search">@Strings.getMSG("MCRiesgoIndex001")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            aux1 = item.cl_tipo_campo.ToString().ToLower();
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_campo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_campo)
                </td>
                <td>
                    @(aux1 == "t" ? Strings.getMSG("TipoCampo004") : aux1 == "a" ? Strings.getMSG("TipoCampo005") : Strings.getMSG("TipoCampo006"))
                </td>
                <td>
                    @(item.es_visible ? Strings.getMSG("UsuarioIndex004") : Strings.getMSG("UsuarioIndex005"))
                </td>
                <td>
                    @(item.es_requerido ? Strings.getMSG("UsuarioIndex004") : Strings.getMSG("UsuarioIndex005"))
                </td>
                <td>
                    @(item.es_editable ? Strings.getMSG("UsuarioIndex004") : Strings.getMSG("UsuarioIndex005"))
                </td>
                <td>
                    @(item.aparece_en_mg ? Strings.getMSG("UsuarioIndex004") : Strings.getMSG("UsuarioIndex005"))
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id_meta_campo })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>