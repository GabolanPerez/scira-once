@model SCIRA.Models.r_conclusion_plan
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar Conclusión del Plan";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<link href="~/Content/AnimacionCarga.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>
<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>
<script src="~/Scripts/Certificacion.js"></script>

<script>
    $("document").ready(function () {
        $("#aviso").modal('show');
    });

    function loading() {
        deshabilitar();
        $("body").addClass('loading');
    }
</script>

<div class="form-horizontal well">
    <h4>@Strings.getMSG("ConclusionPlanDelete002") @Model.k_plan.nb_plan</h4>
    <hr />

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ConclusionPlanCreate001")</label>
            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", @rows = "3", @title = "", data_toggle = "popover", data_trigger = "hover", data_content = "", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("PlanesRemIndex004")</label>
            <div class="col-xs-6 col-md-5">
                <div class='input-group date datetimepicker' id='datetimepicker1'>
                    <input type="text" readonly class="form-control" value="@(Model.fe_conclusion.HasValue ? Model.fe_conclusion.Value.ToString("dd/MM/yyyy"):"")">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.fe_conclusion, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>@Strings.getMSG("RevisionControlRevisiones006")</th>
                <th>@Strings.getMSG("BDEIIndex003")</th>
                <th width="80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model.c_archivo)
            {
                <tr id="fr@(file.id_archivo)">
                    <td>@file.nb_archivo</td>
                    <td>@file.fe_alta.Value.ToString("dd/MM/yyyy hh:mm:ss")</td>
                    <td>
                        <center>
                            <a href="@Url.Action("Download","Archivos", new { id = file.id_archivo})"><i class="fa fa-download" title="@Strings.getMSG("Descargar")"></i></a>|
                            <a onclick="deleteFile(@file.id_archivo,'@file.nb_archivo')"><i class="fa fa-trash" title="@Strings.getMSG("Borrar")"></i></a>
                        </center>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
    function deleteFile(id,nb_archivo) {
        confirmationModal.initModal({
            title: '@Strings.getMSG("AuditoriaEditSeguimientoObservaciones007")' + nb_archivo + '?',
            action: 'deleteFileConfirm('+id+')'
        });
    }

    function deleteFileConfirm(id) {
        //eliminar archivo con ajax
        $.ajax({
            dataType: "html",
            type: "post",
            url: '@(Url.Action("DeleteByUser","Archivos"))',
            data: { id },
            success: function (data) {
                if (data == id) {
                    toastr.success("@Strings.getMSG("AuditoriaEditSeguimientoObservaciones008")");
                    //eliminar fila
                    $("#fr" + id).remove();
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                toastr.error("@Strings.getMSG("AvisoError003")");
            }
        });
    }
    </script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input hidden name="id" value="@Model.id_conclusion_plan">

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }




</div>