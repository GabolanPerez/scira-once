    function printFile(nombre, id) {
        if (extension(nombre) == "pdf") {

        } else {
            var html = 'No se puede mostrar vista previa.';
            $("#" + id).html(html);
        }
    }

    function extension(filename) {
        return filename.slice((filename.lastIndexOf(".") - 1 >>> 0) + 2);
    }

    $(document).ready(function () {
        printFile("@(Model.c_sub_proceso.nb_archivo_flujo)", "f");
        printFile("@(Model.c_sub_proceso.nb_archivo_manual)", "n");

        $("#criticidadAux").val($("#criticidad").val());

        $("#id_magnitud_impacto").change(function () {
            c_criticidad();
        });

        $("#id_probabilidad_ocurrencia").change(function () {
            c_criticidad();
        });
        var encoded;
        var decoded;
        @{
            Type m_tipo = null;
            PropertyInfo[] m_propiedades = null;
            m_tipo = Model.GetType();
            m_propiedades = m_tipo.GetProperties();
            for (int i = 0; i < 20; i++)
            {
                if (ViewBag.CamposExtraRiesgo[i].es_visible)
                {
                    var propiedad = m_propiedades[i + 23];
                    string valor = "";
                    try
                    {
                        valor = propiedad.GetValue(Model,null).ToString();
                    }
                    catch
                    {
                        valor = "";
                    }
                    @:encoded = "@valor";
                    @:decoded = $("<div/>").html(encoded).text();
                    @:$("#campor@(String.Format("{0:00}", i+1))").val(decoded);
                    @:$(".campor@(String.Format("{0:00}", i+1))").val(decoded);
                }
            }
        }

        c_criticidad();

        function c_criticidad() {
            var mi = parseInt($("#id_magnitud_impacto").val());
            var po = parseInt($("#id_probabilidad_ocurrencia").val());


            $("#criticidad").val("");
            $("#criticidadAux").val("");

            //encontrar la criticidad dependiendo de ambos IDs
            @{
                foreach(var criticidad in ViewBag.Criticidad)
                {
                    @:if (po == @(criticidad.id_probabilidad_ocurrencia) && mi == @(criticidad.id_magnitud_impacto))
                    @:{
                        @:$("#criticidad").val("@Html.Raw(criticidad.c_criticidad_riesgo.nb_criticidad_riesgo)");
                        @:$("#criticidadAux").val("@Html.Raw(criticidad.c_criticidad_riesgo.nb_criticidad_riesgo)");
                    @:}
                }
            }
        }
    });
</script>

