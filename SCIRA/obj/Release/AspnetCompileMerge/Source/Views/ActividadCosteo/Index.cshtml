@model IEnumerable<SCIRA.Models.c_area_costeo>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = @Strings.getMSG("Menu011");
}

<script>
        function showLVL2(id) {
            options = {
                title: "@Strings.getMSG("ActividadCosteoIndex001")",
                size: "lg",
                show: true,
                loadUrl: "@(Url.Action("LVL2","ActividadCosteo"))/"+id
            };

            menuModal.initModal(options)
        }
</script>

<h2>@Strings.getMSG("Menu011")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Strings.getMSG("Clave")
            </th>
            <th>
                @Strings.getMSG("Nombre")
            </th>
            <th width="90px"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_area_costeo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_area_costeo)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_area_costeo })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a>
                        |
                        <a href="@Url.Action("Delete", new { id = item.id_area_costeo })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                        |
                        <a onclick="showLVL2(@item.id_area_costeo)">
                            <i class="fa fa-sitemap" title="@Strings.getMSG("ActividadCosteoIndex001")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
