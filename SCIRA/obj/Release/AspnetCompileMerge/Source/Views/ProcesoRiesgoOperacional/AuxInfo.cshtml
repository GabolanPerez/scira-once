@model IEnumerable<SCIRA.Models.c_canal_riesgo_operacional>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = Strings.getMSG("BDEICreate195");
}


<script>
    $(document).ready(function () {
        $("#archivo").change(function () {
            var filename = $("#archivo").val();
            $("#nb_archivo").val(filename);
            if (filename !== "") {
                $("#submit").removeAttr("disabled");
            } else {
                $("#submit").attr("disabled", "disabled");
            }
        });
    });

    function loading() {
        deshabilitar();
        $("body").addClass('loading');
    }

</script>

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("AuxInfoP", null, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "loading()" }))
{
    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("lyPIndex027")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    <input type="text" id="nb_archivo" class="form-control text-box single-line valid" readonly="readonly">
                    <div class="input-group-btn">
                        <label class="btn btn-default btn-file">
                            Examinar <input type="file" id="archivo" name="archivo" style="display: none;" accept="image/jpeg,image/gif,image/png,application/pdf,image/x-eps">
                        </label>
                        <button type="reset" onclick="deshabilitar()" class="btn btn-default" title="@Strings.getMSG("RiesgoCreate119")">
                            <i class="glyphicon glyphicon-remove"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" value="@ViewBag.path" />

    <br />

    <div class="row">
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-6 col-md-5">
                <input type="submit" id="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" disabled="disabled" />
                @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

<br />
<br />
<br />



@if (ViewBag.type == "pdf")
{

    <span><embed src="@Url.Action("DisplayPDF")" width="100%" height="700"></span>

}
else if (ViewBag.type == "png")
{
    <span><img src="@Url.Action("DisplayIMG")" width="100%" height="700" /></span>
}
else if (ViewBag.type == "none")
{
    <center> <span style="font-size: 2rem">@Strings.getMSG("CanalRiesgoOperacionalCreate007")</span> </center>
}

