@model SCIRA.Models.c_ds_evento

@{
    ViewBag.Title = "Editar";
}

<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal well">
        <h4>Descripción del Evento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_ds_evento)

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">Clave</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_ds_evento, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Corresponde al número que se le asignará a la Descripción del Evento.">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_ds_evento, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">Descripción del Evento</label>
                <div class="col-xs-6 col-md-5">
                    @Html.TextAreaFor(model => model.ds_evento, new { @class = "form-control", @rows = "5", @title = "Atención", data_trigger = "hover", data_toggle = "popover", data_content = "Escriba la Descripción del Evento de Riesgo." })
                    @Html.ValidationMessageFor(model => model.ds_evento, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="Guardar" class="btn btn-primary" id="submit" />
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}