<h4>@Strings.getMSG("lyPCreate044")</h4>

<form id="form@(ViewBag.Origen)">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_plan)
    @Html.HiddenFor(model => model.id_seguimiento)


    <input type="hidden" name="fe_seguimiento" value="@(String.Format("{0:dd/MM/yyyy hh:mm}",Model.fe_seguimiento))" />
    <input type="hidden" name="origen" value="@ViewBag.Origen" />
    <input type="hidden" name="nb_objeto" value="@ViewBag.nb_objeto" />

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("lyPSeguimientoCreate002")</label>
            <div class="col-xs-3 col-md-3 has-error">
                @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", @rows = "5", @title = Strings.getMSG("Atención"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("lyPSeguimientoCreate003") })
                @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-xs-offset-2 col-md-offset-2 col-xs-2 col-md-1">@Strings.getMSG("lyPSeguimientosIndex002")</label>
            <div class="col-xs-3 col-md-3">
                <div class='input-group date datetimepicker' id='datetimepicker1'>
                    <input class="form-control" value="@Model.fe_seguimiento.Value.ToString("dd/MM/yyyy")" readonly>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-6 col-md-offset-9 col-md-3">
                <input type="button" value="@Strings.getMSG("Guardar")" class="btn btn-primary" onclick="editSeguimientoPost(@ViewBag.Origen)" />
                <input type="button" class="btn btn-default" onclick="indexSeguimiento(@ViewBag.Origen,@ViewBag.id_plan);" value="@Strings.getMSG("Cancelar")" />
            </div>
        </div>
    </div>
</form>
