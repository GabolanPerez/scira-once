<h4>@Strings.getMSG("lyPlanesdeRemediacionCreate001")</h4>

<form id="form@(ViewBag.Origen)">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_incidencia)

    <input type="text" name="origen" value="@ViewBag.Origen" hidden>
    <input type="text" name="nb_objeto" value="@ViewBag.nb_objeto" hidden>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("lyPlanesdeRemediacionCreate002")</label>
            <div class="col-xs-3 col-md-3 has-error">
                @Html.TextAreaFor(model => model.ds_plan, new { @class = "form-control", @rows = "5", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("lyPlanesdeRemediacionCreate003") })
                @Html.ValidationMessageFor(model => model.ds_plan, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-xs-offset-2 col-md-offset-2 col-xs-2 col-md-1">@Strings.getMSG("RiesgoCreate074")</label>
            <div class="col-xs-3 col-md-3">
                <textarea class="form-control" rows="5" disabled="">@incidencia.ds_incidencia
            </textarea>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("lyPlanesdeRemediacionCreate004")</label>
            <div class="col-xs-3 col-md-3 has-error">
                <div class="input-group">
                    @Html.EditorFor(model => model.nb_plan, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("lyPlanesdeRemediacionCreate005")">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.nb_plan, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-xs-offset-2 col-md-offset-2 col-xs-2 col-md-1">@Strings.getMSG("lyPlanesdeRemediacionIndex002")</label>
            <div class="col-xs-3 col-md-3">
                <input type="text" class="form-control" disabled>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("RevisionControlCreate044")</label>
            <div class="col-xs-3 col-md-3 has-error">
                @Html.DropDownList("id_area", null, Strings.getMSG("IndicadorCreate058"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("lyPlanesdeRemediacionCreate006") })
                @Html.ValidationMessageFor(model => model.id_area, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-xs-offset-2 col-md-offset-2 col-xs-2 col-md-1">@Strings.getMSG("BDEIIndex003")</label>
            <div class="col-xs-3 col-md-3">
                <div class='input-group date datetimepicker' id='datetimepicker1'>
                    <input class="form-control" disabled>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("lyPlanesdeRemediacionCreate008")</label>
            <div class="col-xs-3 col-md-3 has-error">
                @Html.DropDownList("id_responsable", null, Strings.getMSG("lyPCreate009"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("lyPlanesdeRemediacionCreate009") })
                @Html.ValidationMessageFor(model => model.id_responsable, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-xs-offset-2 col-md-offset-2 col-xs-2 col-md-1">@Strings.getMSG("lyPlanesdeRemediacionCreate011")</label>
            <div class="col-xs-3 col-md-3 has-error">
                <div class='input-group date datetimepicker' id='datetimepicker1'>
                    @Html.TextBox("fe_estimada_implantacion", (Model.fe_estimada_implantacion == DateTime.MinValue ? System.DateTime.Now.ToString() : Model.fe_estimada_implantacion.ToString()), new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("lyPlanesdeRemediacionCreate012"), data_val = "false" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.fe_estimada_implantacion, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("lyPlanesdeRemediacionCreate010")</label>
            <div class="col-xs-3 col-md-3 has-error">
                @Html.DropDownList("id_responsable_seguimiento", null, Strings.getMSG("lyPCreate009"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("lyPlanesdeRemediacionCreate009") })
                @Html.ValidationMessageFor(model => model.id_responsable_seguimiento, "", new { @class = "text-danger" })
            </div>

            <label class="control-label col-xs-offset-2 col-md-offset-2 col-xs-2 col-md-1">@Strings.getMSG("lyPlanesdeRemediacionCreate013")</label>
            <div class="col-xs-3 col-md-3">
                <div class='input-group date datetimepicker' id='datetimepicker1'>
                    <input type="text" disabled class="form-control">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("Menu063")</label><!--   -->
            <div class="col-xs-3 col-md-3">
                <input type="text" class="form-control" value="@incidencia.c_clasificacion_incidencia.nb_clasificacion_incidencia" readonly>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-6 col-md-offset-9 col-md-3">
                <input type="button" value="@Strings.getMSG("Guardar")" class="btn btn-primary" onclick="createPlanPost(@ViewBag.Origen)" />
                <input type="button" class="btn btn-default" onclick="indexPlanes(@ViewBag.Origen,@ViewBag.id_incidencia);" value="@Strings.getMSG("Cancelar")" />
            </div>
        </div>
    </div>

    <select multiple id="files" name="files" hidden>
    </select>
</form>

<h4>@Strings.getMSG("ProcesosAuditoriaEditEjecucion020")</h4>

<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Upload","Archivos")"
              class="dropzone"
              data-target="files"
              id="fileUploader"></form>
        <!--data-target es el elemento select multiple a donde se agregaran los ids de los archivos elegidos-->
        <!--el id siempre debera ser fileUploader-->
    </div>
</div>
