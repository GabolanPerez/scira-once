@model SCIRA.Models.c_ambito_riesgo_operacional
@using SCIRA.Utilidades
@{
    ViewBag.Title = @Strings.getMSG("Borrar");
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("AmbitoRiesgoOperacionalIndex001")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Strings.getMSG("Clave")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_ambito_riesgo_operacional)
        </dd>

        <dt>
            @Strings.getMSG("Nombre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_ambito_riesgo_operacional)
        </dd>

    </dl>

    @if (ViewBag.RR.Count > 0)
    {

        <h4>@Strings.getMSG("EntidadDelete003")</h4>

        <table id="results" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Strings.getMSG("Catálogo")</th>
                    <th>@Strings.getMSG("EntidadDelete004")</th>
                    <th>@Strings.getMSG("EntidadDelete005")</th>
                    <th width="40"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.RR)
                {
                    <tr>
                        <td style="white-space: nowrap">
                            @(item.nb_catalogo)
                        </td>
                        <td>
                            @(item.cl_registro)
                        </td>
                        <td>
                            @(item.nb_registro)
                        </td>
                        <td style="white-space: nowrap">
                            <center>
                                <a href="@Url.Action(item.accion,item.controlador, new { id = item.id_registro,redirect = "AmbitoRiesgoOperacional/Delete/" + Model.id_ambito_riesgo_operacional})">
                                    <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                                </a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (ViewBag.RR.Count == 0)
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" />
            |
            @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 57 }, new { @class = "btn btn-default btn-sm" })
        </div>
        }
    }
    else
    {
        <div>
            @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 57 }, new { @class = "btn btn-default btn-sm" })
        </div>
    }
</div>
