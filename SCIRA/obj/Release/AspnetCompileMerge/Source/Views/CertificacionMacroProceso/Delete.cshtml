@model SCIRA.Models.k_certificacion_estructura
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("CertificacionInforme015") @(Model.c_macro_proceso.nb_macro_proceso)</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Strings.getMSG("PeriodoCertificacionIndex002")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_periodo_certificacion.nb_periodo_certificacion)
        </dd>

        <dt>
            @Strings.getMSG("CertificacionesEntidad005")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.leyenda_certificacion_estructura)
        </dd>

        <dt>
            @Strings.getMSG("lyPSeguimientoCreate002")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.comentarios)
        </dd>

        <dt>
            @Strings.getMSG("CertificacionesEntidad006")
        </dt>

        <dd>
            @(Model.resultado ? Strings.getMSG("UsuarioIndex004"):Strings.getMSG("UsuarioIndex005"))
        </dd>
    </dl>

    @if (Model.c_archivo.Count != 0)
    {
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Strings.getMSG("RevisionControlRevisiones006")</th>
                    <th>@Strings.getMSG("BDEIIndex003")</th>
                    <th width="80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model.c_archivo)
                {
                    <tr id="fr@(file.id_archivo)">
                        <td>@file.nb_archivo</td>
                        <td>@file.fe_alta.Value.ToString("dd/MM/yyyy hh:mm:ss")</td>
                        <td>
                            <center>
                                <a href="@Url.Action("Download", "Archivos", new { id = file.id_archivo })"><i class="fa fa-download" title="@Strings.getMSG("Descargar")"></i></a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" /> |
                @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 79, id = Model.id_macro_proceso }, new { @class = "btn btn-default btn-sm" })
            </div>
        }
    </div>
