@model IEnumerable<SCIRA.Models.c_solicitante_auditoria>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@{
    ViewBag.Title = "Solicitantes de Auditoría";
}

<h2>@Strings.getMSG("AuditoriaIndexSolicitanteAuditoria001")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "CreateSolicitanteAuditoria", "Auditoria", new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_solicitante_auditoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_solicitante_auditoria)
                </td>
                <td>
                    <a href="@Url.Action("EditSolicitanteAuditoria", new { id = item.id_solicitante_auditoria })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                    </a> |
                    <a href="@Url.Action("DeleteSolicitanteAuditoria", new { id = item.id_solicitante_auditoria })">
                        <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
