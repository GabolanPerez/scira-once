@model IEnumerable<SCIRA.Models.c_criticidad_programa_trabajo>
@using SCIRA.Utilidades 
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = @Strings.getMSG("Menu100");
}

<h2>@Strings.getMSG("Menu100")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "CreateCriticidad", "Auditoria", new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th class="search">@Strings.getMSG("RiesgoResidualConfigIndex030")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cl_criticidad_programa_trabajo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nb_criticidad_programa_trabajo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                <a href="@Url.Action("EditCriticidad", new { id = item.id_criticidad_programa_trabajo})">
                    <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                </a> |
                <a href="@Url.Action("DeleteCriticidad", new { id = item.id_criticidad_programa_trabajo })">
                    <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
