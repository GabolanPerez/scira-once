@model IEnumerable<SCIRA.Models.k_bdei>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "BDEI";
}

<h2>@Strings.getMSG("Menu146")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th class="search">@Strings.getMSG("BDEICreate101")</th>
            <th class="search">@Strings.getMSG("Entidad")</th>
            <th class="search">@Strings.getMSG("Menu048")</th>
            <th class="search">@Strings.getMSG("BDEIIndex001")</th>
            <th class="search">@Strings.getMSG("BDEIIndex002")</th>
            <th class="search">@Strings.getMSG("BDEIIndex003")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_bdei)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.folio_riesgo_operacional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_entidad.cl_entidad) - @Html.DisplayFor(modelItem => item.c_entidad.nb_entidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_clase_evento.nb_clase_evento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_usuario1.nb_usuario)
            </td>
            <td>
                @(item.fe_ocurrencia.HasValue ?  item.fe_ocurrencia.Value.ToString("dd/MM/yyyy") : "")
            </td>
            <td>
                @(item.fe_alta.HasValue ?  item.fe_alta.Value.ToString("dd/MM/yyyy") : "")
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.id_bdei })">
                    <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                </a> |
                <a href="@Url.Action("Delete", new { id = item.id_bdei })">
                    <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
