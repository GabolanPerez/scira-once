<script type="text/javascript">
    var urlCrit = "@Url.Action("GetCriticidad")";

    var modalOptions = {
        title: "Detalles Magnitud de Impacto",
        size: "lg",
        show: true,
        loadUrl: "@(Url.Action("infoMI","Riesgo"))"
    }

    function infoMI() {
        menuModal.initModal(modalOptions);
    }


    $(function () {
        $("#id_categoria_riesgo").change(function () {
            var selectedItem = $(this).val();
            var ddlTiposRiesgo = $("#id_tipo_riesgo");
            var cargandoTiposRiesgo = $("#cargando-tipos-riesgo");
            cargandoTiposRiesgo.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneTiposRiesgo"))",
                data: { "IdCategoriaRiesgo": selectedItem },
                success: function (data) {
                    ddlTiposRiesgo.html('');
                    ddlTiposRiesgo.append($('<option></option>').val(null).html("@Strings.getMSG("RiesgoRiesgos010")"))
                    $.each(data, function (id, option) {
                        ddlTiposRiesgo.append($('<option></option>').val(option.id).html(option.name));
                    });
                    cargandoTiposRiesgo.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //alert('Error al recuperar Tipos de Riesgo.');
                    cargandoTiposRiesgo.hide();
                }
            });
        });
    });

    $(function () {
        $("#id_clase_tipologia_riesgo").change(function () {
            var selectedItem = $(this).val();
            var ddlSubClasesTipologiaRiesgo = $("#id_sub_clase_tipologia_riesgo");
            var ddlTipologiaRiesgo = $("#id_tipologia_riesgo");
            var cargandoSubClasesTipologiaRiesgo = $("#cargando-sub-clases-tipologia-riesgo");
            cargandoSubClasesTipologiaRiesgo.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneSubClasesTipologiaRiesgo"))",
                data: { "IdClaseTipologiaRiesgo": selectedItem },
                success: function (data) {
                    ddlSubClasesTipologiaRiesgo.html('');
                    ddlSubClasesTipologiaRiesgo.append($('<option></option>').val(null).html("@Strings.getMSG("RiesgoRiesgos011")"))
                    ddlTipologiaRiesgo.html('');
                    ddlTipologiaRiesgo.append($('<option></option>').val(null).html("@Strings.getMSG("RiesgoRiesgos012")"))
                    $.each(data, function (id, option) {
                        ddlSubClasesTipologiaRiesgo.append($('<option></option>').val(option.id).html(option.name));
                    });
                    cargandoSubClasesTipologiaRiesgo.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //alert('Error al recuperar Sub Clases de Tipologia de Riesgo.');
                    cargandoSubClasesTipologiaRiesgo.hide();
                }
            });
        });
    });

    $(function () {
        $("#id_sub_clase_tipologia_riesgo").change(function () {
            var selectedItem = $(this).val();
            var ddlTipologiaRiesgo = $("#id_tipologia_riesgo");
            var cargandoTipologiasRiesgo = $("#cargando-tipologias-riesgo");
            cargandoTipologiasRiesgo.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneTipologiasRiesgo"))",
                data: { "IdSubClaseTipologiaRiesgo": selectedItem },
                success: function (data) {
                    ddlTipologiaRiesgo.html('');
                    ddlTipologiaRiesgo.append($('<option></option>').val(null).html("@Strings.getMSG("RiesgoRiesgos012")"))
                    $.each(data, function (id, option) {
                        ddlTipologiaRiesgo.append($('<option></option>').val(option.id).html(option.name));
                    });
                    cargandoTipologiasRiesgo.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //alert('Error al recuperar Tipologias de Riesgo.');
                    cargandoTipologiasRiesgo.hide();
                }
            });
        });
    });

    function printFile(nombre, id) {
        if (extension(nombre) == "pdf") {

        } else {
            var html = '@Strings.getMSG("RiesgoCreate083")';
            $("#" + id).html(html);
        }
    }

    function extension(filename) {
        return filename.slice((filename.lastIndexOf(".") - 1 >>> 0) + 2);
    }

    $(document).ready(function () {
        $("#aviso").modal('show');
        printFile("@(Model.c_sub_proceso.nb_archivo_flujo)", "f");
        printFile("@(Model.c_sub_proceso.nb_archivo_manual)", "n");
        $("#siguiente").click(function () {
            $(".sig_boton").trigger('click');
        });

        @{
            Type m_tipo = null;
            PropertyInfo[] m_propiedades = null;
            m_tipo = Model.GetType();
            m_propiedades = m_tipo.GetProperties();
            for (int i = 0; i < 20; i++)
            {
                if (ViewBag.CamposExtraControl[i].es_visible)
                {
                    var propiedad = m_propiedades.First(p=>p.Name == "campo" + String.Format("{0:00}", i + 1));
                    //var propiedad = m_propiedades[i + 39];
                    string valor = "";
                    try
                    {
                        valor = propiedad.GetValue(Model,null).ToString();
                    }
                    catch
                    {
                        valor = "";
                    }
                    @:$("#campo@(String.Format("{0:00}", i+1))").val("@Html.Raw(valor)");
                }
            }
            for (int i = 0; i < 20; i++)
            {
                if (ViewBag.CamposExtraRiesgo[i].es_visible)
                {
                    var propiedad = m_propiedades.First(p=>p.Name == "campor" + String.Format("{0:00}", i + 1));
                    //var propiedad = m_propiedades[i + 59];
                    string valor = "";
                    try
                    {
                        valor = propiedad.GetValue(Model,null).ToString();
                    }
                    catch
                    {
                        valor = "";
                    }
                    @:$("#campor@(String.Format("{0:00}", i+1))").val("@Html.Raw(valor)");
                }
            }
        }

        function deshabilitarMRyC() {
            document.getElementById("submit").value = "@Strings.getMSG("RiesgoRiesgos013")";
            document.getElementById("submit").disabled = true;

            document.getElementById("submit2").value = "@Strings.getMSG("RiesgoRiesgos013")";
            document.getElementById("submit2").disabled = true;

            setInterval(function () { habilitar2(); }, 3000, null);

            return true;
        }

        function habilitar2() {
            document.getElementById("submit").value = "@Strings.getMSG("Guardar")";
            document.getElementById("submit").disabled = false;

            document.getElementById("submit2").value = "@Strings.getMSG("Guardar")";
            document.getElementById("submit2").disabled = false;

            return true;
        }

        if ($("#tiene_accion_correctora").is(':checked')) {
            $("#accion_correctora").html('<a href="#plan"  class="sig_boton" data-toggle="tab" id="accion_correctora_boton"><h4>@Strings.getMSG("RiesgoCreate079")</h4></a>');
            $("#accion_correctora").removeClass("disabled");
            $("#controlTab").html('<a><h4>Control</h4></a>');
            $("#controlTab").addClass("disabled");
            $('#respControl').appendTo('#vacio2');
            $('#AcCr').appendTo('#Contenedor2');
        }

        $(function () {
            $('#AcCr .toggle').click(function () {
                setTimeout(function () {
                    if ($("#tiene_accion_correctora").is(':checked')) {
                        $("#accion_correctora").html('<a href="#plan" data-toggle="tab" id="accion_correctora_boton"><h4>@Strings.getMSG("RiesgoCreate079")</h4></a>');
                        $("#accion_correctora").removeClass("disabled");
                        $("#controlTab").html('<a><h4>Control</h4></a>')
                        $("#controlTab").addClass("disabled");
                        $('#AcCr').appendTo('#Contenedor2');
                        $('#respControl').appendTo('#vacio2');
                        $('#accion_correctora_boton').trigger('click');
                    } else {
                        $("#accion_correctora").html('<a><h4>@Strings.getMSG("RiesgoCreate079")</h4></a>');
                        $("#accion_correctora").addClass("disabled");
                        $("#controlTab").html('<a href="#control" data-toggle="tab" id="controlTab_boton"><h4>@Strings.getMSG("Control")</h4></a>')
                        $("#controlTab").removeClass("disabled");
                        $('#AcCr').appendTo('#Contenedor1');
                        $('#respControl').appendTo('#vacio');
                        $('#controlTab_boton').trigger('click');
                    }
                }, 250);
            })
        })

        $("#id_magnitud_impacto").change(function () {
            c_criticidad();
        });

        $("#id_probabilidad_ocurrencia").change(function () {
            c_criticidad();
        });

        c_criticidad();

        function c_criticidad() {
            var mi = parseInt($("#id_magnitud_impacto").val());
            var po = parseInt($("#id_probabilidad_ocurrencia").val());


            $("#criticidad").val("");
            $("#criticidadAux").val("");

            //encontrar la criticidad dependiendo de ambos IDs
            @{
                foreach(var criticidad in ViewBag.Criticidad)
                {
                    @:if (po == @(criticidad.id_probabilidad_ocurrencia) && mi == @(criticidad.id_magnitud_impacto))
                    @:{
                        @:$("#criticidad").val("@Html.Raw(criticidad.c_criticidad_riesgo.nb_criticidad_riesgo)");
                        @:$("#criticidadAux").val("@Html.Raw(criticidad.c_criticidad_riesgo.nb_criticidad_riesgo)");
                    @:}
                }
            }
        }

        setTimeout(function () {
            if ($("#requiere_plan").is(':checked')) {
                $("#justificacion").hide();
            } else {
                $("#justificacion").show();
            }
        }, 250);


        $("#id_frecuencia_riesgo_operacional,#id_impacto_riesgo_operacional").change(function () {
            var idfr = $("#id_frecuencia_riesgo_operacional").val();
            var idim = $("#id_impacto_riesgo_operacional").val();


            if (idfr > 0 && idim > 0) {

                $("#idfr").val(idfr);
                $("#idi").val(idim);


                var crit = getFromURL(urlCrit, "form1");
                $("#criticidadRO").val(crit);
            } else {
                $("#criticidadRO").val("");
            }
        });

        @if(Model.id_frecuencia_riesgo_operacional != null && Model.id_impacto_riesgo_operacional != null)
        {
        @:$("#criticidadRO").val("@Utilidades.Criticidad((int)Model.id_frecuencia_riesgo_operacional,(int)Model.id_impacto_riesgo_operacional)");
        }
    });

    $(function () {
        $('#RPR .toggle').click(function () {
            setTimeout(function () {
                if ($("#requiere_plan").is(':checked')) {
                    $("#justificacion").hide();
                } else {
                    $("#justificacion").show();
                }
            }, 250);
        })
    });


    $(function () {
        $('#ERO .toggle').click(function () {
            setTimeout(function () {
                if ($("#es_riesgo_operativo").is(':checked')) {
                    $(".ROSelects").removeAttr("hidden");
                    //toastr.info("mostrando");
                } else {
                    $(".ROSelects").attr("hidden", true);
                    //toastr.info("ocultando");
                }
            }, 250);
        })
    });


</script>


