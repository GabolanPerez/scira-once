@model IEnumerable<SCIRA.Models.c_rating_auditoria>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@{
    ViewBag.Title = "Rating de Auditoría";
}

<h2>@Strings.getMSG("AuditoriaIndexRatingAuditoria001")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "CreateRatingAuditoria", "Auditoria", new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th class="search">@Strings.getMSG("EvaluacionIndicadorEvaluaciones003")</th>
            <th >@Strings.getMSG("Color")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_rating_auditoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.calificacion)
                </td>
                <td style="color:@item.cl_color_campo;font-size: 3rem;background-color:white;">
                    <center>▰</center>
                </td>
                <td>
                    <a href="@Url.Action("EditRatingAuditoria", new { id = item.id_rating_auditoria })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                    </a> |
                    <a href="@Url.Action("DeleteRatingAuditoria", new { id = item.id_rating_auditoria })">
                        <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
