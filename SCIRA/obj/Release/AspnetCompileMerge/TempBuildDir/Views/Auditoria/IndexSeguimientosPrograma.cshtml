@model SCIRA.Models.k_programa_trabajo
@using SCIRA.Utilidades 
@{
    Layout = "~/Views/Shared/_LayoutReporte.cshtml";
    ViewBag.Title = "Comentarios de la incidencia";

    List<SCIRA.Models.k_comentario_programa_trabajo> comentarios = Model.k_comentario_programa_trabajo.ToList();

    var kAuditoria = Model.k_auditoria;
    var auditoria = kAuditoria.c_auditoria;
    var prueba = Model.c_prueba_auditoria;
}

<h2>@Strings.getMSG("AuditoriaIndexSeguimientosPrograma001")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "CreateComentario", "Auditoria",new { id = Model.idd_programa_trabajo }, new { @class = "btn btn-default btn-sm" })
    @Html.ActionLink(Strings.getMSG("Regresar"), "IndexSeguimientoObservaciones", "Auditoria",null, new { @class = "btn btn-default btn-sm" })
</p>

<table class="results table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Strings.getMSG("Menu148")</th>
            <th >@Strings.getMSG("AuditoriaIndexSeguimientosPrograma002")</th>
            <th >@Strings.getMSG("ProcesosAuditoriaEditPrueba002")</th>
            <th >@Strings.getMSG("RiesgoCreate074")</th>
            <th >@Strings.getMSG("AuditoriaIndexSeguimientosPrograma003")</th>
            <th >@Strings.getMSG("Responsable")</th>
            <th >@Strings.getMSG("BDEICreate026")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in comentarios)
        {
        <tr>
            <td>
                @(auditoria.nb_auditoria)
            </td>
            <td>
                @(prueba.nb_prueba_auditoria)
            </td>
            <td>
                @(prueba.ds_prueba_auditoria)
            </td>
            <td>
                @(Model.incidencia_detectada)
            </td>
            <td>@string.Format("{0:dd/MM/yyyy}", item.fe_comentario)</td>
            <td>@item.nb_responsable</td>
            <td>@item.comentario</td>
            <td>
                <a href="@Url.Action("EditComentario", new { id = item.id_comentario_programa_trabajo})">
                    <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                </a> |
                <a href="@Url.Action("DeleteComentario", new { id = item.id_comentario_programa_trabajo})">
                    <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
