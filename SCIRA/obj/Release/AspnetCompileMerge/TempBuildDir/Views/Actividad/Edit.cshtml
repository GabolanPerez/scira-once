@model SCIRA.Models.c_actividad
@using SCIRA.Utilidades

@{
    ViewBag.Title = Strings.getMSG("Editar");
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    string entidad;
    try
    {
        entidad = Model.c_entidad.cl_entidad + " - " + Model.c_entidad.nb_entidad;
    }
    catch
    {
        entidad = "General";
    }
}
<script src="~/Scripts/sharedScripts.js"></script>
<h2>@Strings.getMSG("Editar")</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("ActividadIndex001")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_actividad)
        @if (Model.c_entidad != null)
        {
            @Html.HiddenFor(model => model.id_entidad)
            <div class="row">
                <div class="form-group has-error">
                    <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Entidad")</label>
                    <div class="col-xs-6 col-md-5">
                        <div class="input-group">
                            <input type="text" class="form-control" disabled value="@entidad">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadEdit002")">
                                    <i class="glyphicon glyphicon-question-sign"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="form-group has-error">
                    <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Entidad") Prueba de edicion</label>
                    <div class="col-xs-6 col-md-5">
                        <div class="input-group">
                            <input type="text" class="form-control" disabled value="@Strings.getMSG("ActividadEdit003")">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadEdit001")">
                                    <i class="glyphicon glyphicon-question-sign"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }



        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_actividad, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadCreate004")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_actividad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Nombre")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_actividad, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadCreate005")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_actividad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(@Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}