@model IEnumerable<SCIRA.Models.c_actividad>
@using SCIRA.Utilidades 

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = @Strings.getMSG("Agregar");
}

<h2>@Strings.getMSG("ActividadIndex001")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">
                @Strings.getMSG("Entidad")
            </th>
            <th>
                @Strings.getMSG("Clave")
            </th>
            <th>
                @Strings.getMSG("Nombre")
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.id_entidad == null)
                    {
                        <span>@Strings.getMSG("General")</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.c_entidad.cl_entidad)<span> - </span>@Html.DisplayFor(modelItem => item.c_entidad.nb_entidad)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_actividad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_actividad)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_actividad })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_actividad })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
