@model SCIRA.Models.c_contenido_grupo
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>
        @if (ViewBag.Contador != 0)
        {
            @("Contenido para ")
            for (int i = ViewBag.Contador; i > 0; i--)
            {
                <span> @ViewBag.Claves[i - 1] >> </span>
            }
        }
        else
        {
            @:@Strings.getMSG("ContenidoGrupoCreate004")
        }
    </h4>
    <hr />
    <div class="row">
        <div class="col-xs-offset-2 col-xs-6 col-md-5">
            <p class="info">
                @Strings.getMSG("ContenidoGrupoDelete001")
            </p>
        </div>
    </div>

    <hr />


    <dl class="dl-horizontal">

        <dt>
            @Strings.getMSG("Clave")
        </dt>

        <dd>
            @Model.cl_contenido_grupo
        </dd>

        <dt>
            @Strings.getMSG("SubProcesoCreate018")
        </dt>

        <dd>
            @Model.ds_contenido_grupo
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Strings.getMSG("Borrar")" id="submit" class="btn btn-primary" /> |
            @Html.ActionLink(Strings.getMSG("Regresar"), "Index", new { id = Model.id_contenido_grupo_padre }, new { @class = "btn btn-default" })
        </div>
    }
</div>
