@model IEnumerable<SCIRA.Models.c_tipo_riesgo>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Tipo de Riesgo";
}


<h2>@Strings.getMSG("Menu019")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Strings.getMSG("Clave")
            </th>
            <th>
                @Strings.getMSG("Nombre")
            </th>
            <th>
                @Strings.getMSG("Menu018")
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_tipo_riesgo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_tipo_riesgo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_categoria_riesgo.nb_categoria_riesgo)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_tipo_riesgo })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_tipo_riesgo })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
