@model IEnumerable<SCIRA.Models.c_clase_evento>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Sub Proceso Benchmark";
}

<h2>@Strings.getMSG("ClaseEventoRiesgoOperacionalIndex001")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Strings.getMSG("TipoRiesgoOperacionalIndex001")
            </th>
            <th>
                @Strings.getMSG("SubTipoRiesgoOperacionalIndex001")
            </th>
            <th>
                @Strings.getMSG("Clave")
            </th>
            <th>
                @Strings.getMSG("Nombre")
            </th>
            <th width="50px"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.c_sub_tipo_riesgo_operacional.c_tipo_riesgo_operacional.cl_tipo_riesgo_operacional - @item.c_sub_tipo_riesgo_operacional.c_tipo_riesgo_operacional.nb_tipo_riesgo_operacional
                </td>
                <td>
                    @item.c_sub_tipo_riesgo_operacional.cl_sub_tipo_riesgo_operacional - @item.c_sub_tipo_riesgo_operacional.nb_sub_tipo_riesgo_operacional
                </td>
                <td>
                    @item.cl_clase_evento
                </td>
                <td>
                    @item.nb_clase_evento
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_clase_evento})">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_clase_evento })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
