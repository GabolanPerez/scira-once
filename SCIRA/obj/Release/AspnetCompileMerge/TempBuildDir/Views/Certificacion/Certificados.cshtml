@model IEnumerable<SCIRA.Models.k_certificacion_control>
@using SCIRA.Models
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Certificados";
    var db = new SICIEntities();
    int id_periodo = 0;

    try
    {
        id_periodo = db.c_periodo_certificacion.Where(p => p.esta_activo).First().id_periodo_certificacion;
    }
    catch
    {

    }
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<h2>@Strings.getMSG("CertificaciónCertificados001") @ViewBag.Control</h2>

<p>
    @if (!Model.Any(c => c.id_periodo_certificacion == id_periodo))
    {
        @Html.ActionLink(Strings.getMSG("Agregar"), "Certificar", new { @id = ViewBag.id_control }, new { @class = "btn btn-default btn-sm" })
    }
    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("PeriodoCertificacionIndex002")</th>
            <th>@Strings.getMSG("CertificacionCertificados001")</th>
            <th>@Strings.getMSG("ContestacionOficioIndex005")</th>
            <th width="90">@Strings.getMSG("CertificacionesEntidad007")</th>
            <th width="100"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            bool nsc = false; //Nivel Superior Certificado

            //certificación del nivel superior
            var certNS = item.k_control.c_sub_proceso.k_certificacion_estructura.FirstOrDefault(c => c.id_periodo_certificacion == item.id_periodo_certificacion);
            if(certNS != null)
            {
                nsc = true;
            }


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_certificacion_control)
                </td>
                <td>
                    @(item.c_periodo_certificacion.nb_periodo_certificacion + " - " + item.c_periodo_certificacion.anio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ds_procedimiento_certificacion)
                </td>
                <td>
                    @item.k_incidencia.Count.ToString()
                </td>
                <td>
                    @if (item.nb_archivo_1 != null)
                    { 
                        <a href="@Url.Action("DescargaArchivo", new { id = item.id_certificacion_control,index = 1 })">
                            <i class="fa fa-download fa-lg" title="@item.nb_archivo_1"></i>
                        </a>
                    }
                    @if (item.nb_archivo_2 != null)
                    { 
                        <a href="@Url.Action("DescargaArchivo", new { id = item.id_certificacion_control,index = 2 })">
                            <i class="fa fa-download fa-lg" title="@item.nb_archivo_2"></i>
                        </a>
                    }
                    @if (item.nb_archivo_3 != null)
                    { 
                        <a href="@Url.Action("DescargaArchivo", new { id = item.id_certificacion_control,index = 3 })">
                            <i class="fa fa-download fa-lg" title="@item.nb_archivo_3"></i>
                        </a>
                    }
                    @if (item.nb_archivo_4 != null)
                    { 
                        <a href="@Url.Action("DescargaArchivo", new { id = item.id_certificacion_control,index = 4 })">
                            <i class="fa fa-download fa-lg" title="@item.nb_archivo_4"></i>
                        </a>
                    }
                    @if (item.nb_archivo_5 != null)
                    { 
                        <a href="@Url.Action("DescargaArchivo", new { id = item.id_certificacion_control,index = 5 })">
                            <i class="fa fa-download fa-lg" title="@item.nb_archivo_5"></i>
                        </a>
                    }
                </td>
                <td>
                    @if (id_periodo == item.id_periodo_certificacion)
                    {
                        <a href="@Url.Action("Edit", new { id = item.id_certificacion_control })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a>
                        @:|
                    }
                    @if (!nsc)
                    {
                        <a href="@Url.Action("Delete", new { id = item.id_certificacion_control })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    }
                    else
                    {
                        <button disabled>
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("CertificacionInforme012")"></i>
                        </button>
                    }
                    |
                    <a href="@Url.Action("Details", new { id = item.id_certificacion_control })">
                        <i class="glyphicon glyphicon-info-sign" title="@Strings.getMSG("Detalles")"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
