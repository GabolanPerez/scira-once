@model IEnumerable<SCIRA.Models.k_evaluacion>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Evaluación de Indicadores";
}

<h2>@Strings.getMSG("EvaluacionIndicadorEvaluaciones004")</h2>
<h2>"@ViewBag.nb_indicador"</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", "EvaluacionIndicador",new { id = ViewBag.id }, new { @class = "btn btn-default btn-sm" })
    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Entidad")</th>
            <th class="search">@Strings.getMSG("EvaluacionIndicadorEvaluaciones002")</th>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th>@Strings.getMSG("ControlEdit001")</th>
            <th>@Strings.getMSG("EvaluacionIndicadorEvaluaciones001")</th>
            <th>@Strings.getMSG("EvaluacionIndicadorEvaluaciones003")</th>
            <th width="75"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.c_indicador.c_entidad.nb_entidad)</td>
                <td>@Html.DisplayFor(modelItem => item.c_periodo_indicador.nb_periodo_indicador)</td>
                <td>@Html.DisplayFor(modelItem => item.c_indicador.cl_indicador)</td>
                <td>@Html.DisplayFor(modelItem => item.c_indicador.nb_indicador)</td>
                <td>@Html.DisplayFor(modelItem => item.medicion)</td>
                <td>@Html.DisplayFor(modelItem => item.c_calificacion_indicador.nb_calificacion_indicador)</td>
                <td>
                    <center>
                        @if (item.c_periodo_indicador.esta_activo)
                        {
                            <a href="@Url.Action("Edit", new { id = item.id_evaluacion })">
                                <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                            </a><span>|</span>
                        }
                        <a href="@Url.Action("Delete", new { id = item.id_evaluacion })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
