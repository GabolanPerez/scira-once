@model IEnumerable<SCIRA.Models.h_excepcion>
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Reporte Errores";
    Layout = "~/Views/Shared/_LayoutReporte.cshtml";
}

<h2>@Strings.getMSG("ReporteFallasIndex003")</h2>

<table class="results table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Función")</th>
            <th class="search">@Strings.getMSG("ReporteFallasIndex002")</th>
            <th class="search">@Strings.getMSG("ReporteFallasIndex001")</th>
            <th class="search">@Strings.getMSG("lyPSeguimientosIndex002")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var nb_funcion = "";
            try
            {
                nb_funcion = item.c_funcion.nb_funcion;
            }
            catch
            {
                nb_funcion = "N/A";
            }

        <tr>
            <td>@( nb_funcion)</td>
            <td>@( item.nb_metodo)</td>
            <td>@( item.ds_excepcion)</td>
            <td>@( string.Format("{0:dd/MM/yyyy hh:mm:ss}", item.fe_excepcion))</td>
        </tr>
        }
    </tbody>
</table>
