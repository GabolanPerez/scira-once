@model IEnumerable<SCIRA.Models.c_entidad>
@using SCIRA.Utilidades

@{

    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Diagrama Entidades";
}

<button class="btn btn-circle btn-default pull-right" title="Tutorial" onclick="runTutorial();"><i class="fa fa-question fa-lg"></i></button>

<h2><span class="catalogName">Diagramas de Entidades</span></h2>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Entidad")</th>
            <th class="search">@Strings.getMSG("Responsable")</th>
            <th class="search">@Strings.getMSG("Puestos")</th>
            <th width="35"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @( item.cl_entidad + " - " + item.nb_entidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_usuario.nb_usuario)
                </td>
                <td>
                    @SCIRA.Utilidades.Utilidades.PuestoUsuario(item.id_responsable)
                </td>
                <td>
                    <a href="@Url.Action("Diagrama", new { id = item.id_entidad })" class="diagram">
                        <i class="fa fa-object-ungroup" title="Diagrrama"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    //Datos del Tutorial
    var enjoyhint_script_data = [
        {
            selector: '.catalogName',
            event_type: 'next',
            description: '@Utilidades.TutorialMessage("Entidades0001")',
        },
        {
            selector: '.add:first',
            event_type: 'next',
            description: '@Utilidades.TutorialMessage("Entidades0002")',
        },
        {
            selector: '#results',
            event_type: 'next',
            description: '@Utilidades.TutorialMessage("Entidades0003")',
        },
        @if(Model.Count() > 0)
        {
            @:{
            @:   selector: '.edit:first',
            @:   event_type: 'next',
            @:   description: '@Utilidades.TutorialMessage("Entidades0004")',
            @:},
            @:{
            @:   selector: '.delete:first',
            @:   event_type: 'next',
            @:   description: '@Utilidades.TutorialMessage("Entidades0005")',
            @:},
        }
    ];
</script>
