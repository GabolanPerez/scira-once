@model SCIRA.ViewModels.AgregarBenchmarkViewModel
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Agregar";
}
<script src="~/Scripts/sharedScripts.js"></script>

<script>
    function trigg(elemento) {
        $("#" + elemento).trigger('click');
    }

    $(function () {
        $("#id_actividad").change(function () {
            var selectedItem = $(this).val();
            var ddlProcesos = $("#id_proceso_benchmark");
            var cargando = $("#cargando-procesos");
            cargando.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneProcesosBenchmark"))",
                data: { "idActividad": selectedItem },
                success: function (data) {
                    ddlProcesos.html('');
                    ddlProcesos.append($('<option></option>').val(null).html("@Strings.getMSG("SubProcesoBenchmarkCreate004")"))
                    $.each(data, function (id, option) {
                        ddlProcesos.append($('<option></option>').val(option.id).html(option.name));
                    });
                    cargando.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    cargando.hide();
                }
            });
        });
    });

    $(function () {
        $("#id_proceso_benchmark").change(function () {
            var selectedItem = $(this).val();
            var ddlProcesos = $("#id_sub_proceso_benchmark");
            var cargando = $("#cargando-sub-procesos");
            cargando.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneSubProcesosBenchmark"))",
                data: { "idProcesoBenchmark": selectedItem },
                success: function (data) {
                    ddlProcesos.html('');
                    ddlProcesos.append($('<option></option>').val(null).html("@Strings.getMSG("EventoRiesgoCreate003")"))
                    $.each(data, function (id, option) {
                        ddlProcesos.append($('<option></option>').val(option.id).html(option.name));
                    });
                    cargando.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    cargando.hide();
                }
            });
        });
    });

    $(function () {
        $("#id_sub_proceso_benchmark").change(function () {
            var selectedItem = $(this).val();
            var ddlProcesos = $("#id_evento_riesgo");
            var cargando = $("cargando-eventos-riesgo");
            cargando.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneEventosBenchmark"))",
                data: { "idSubProcesoBenchmark": selectedItem },
                success: function (data) {
                    ddlProcesos.html('');
                    ddlProcesos.append($('<option></option>').val(null).html("@Strings.getMSG("BenchmarkCreate001")"))
                    $.each(data, function (id, option) {
                        ddlProcesos.append($('<option></option>').val(option.id).html(option.name));
                    });
                    cargando.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    cargando.hide();
                }
            });
        });
    });

    function setSP(id) {
        var nb_sub_proceso = $("#" + id + "sp").val();
        $("#subproceso").val(nb_sub_proceso);
        $("#id_sub_proceso").val(id);
        $("#GENERALES").trigger('click');
        $("#submit").attr('disabled',false);
    }
</script>

@if (Model.id_sub_proceso > 0)
{
    <script>
        $(document).ready(function () {
            var nb_sub_proceso = $("#" + @(Model.id_sub_proceso) + "sp").val();
            $("#subproceso").val(nb_sub_proceso);
            $("#id_sub_proceso").val(@(Model.id_sub_proceso));
            $("#GENERALES").trigger('click');
            $("#submit").attr('disabled', false);
        });
    </script>
}


<h2>@Strings.getMSG("BenchmarkCreate011")</h2>

<br/><br/>
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.id_entidad)
    @Html.EditorFor(model => model.id_sub_proceso, new { htmlAttributes = new { @hidden = "hidden", @type = "text" } })

    <ul class="nav nav-tabs">
        <li class="active"><a href="#Generales" data-toggle="tab" id="GENERALES"><h4>@Strings.getMSG("BenchmarkCreate002")</h4></a></li>
        <li><a href="#SubProcesos" data-toggle="tab" id="SPS"><h4>@Strings.getMSG("SP")</h4></a></li>
    </ul>

    <div id="myTabContent" class="tab-content">

        <div class="tab-pane fade active in" id="Generales">
            <br />
            <div class="form-horizontal well">

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ActividadIndex001")</label>
                        <div class="col-xs-6 col-md-5">
                            @Html.DropDownListFor(model => model.id_actividad, Model.MacroProcesos, Strings.getMSG("ProcesoBenchmarkCreate002"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("EventoRiesgoCreate005") })
                            <span id="cargando-macro-procesos" style="display: none;">@Strings.getMSG("EventoRiesgoCreate010")</span>
                            @Html.ValidationMessageFor(model => model.id_actividad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ProcesoBenchmarkIndex001")</label>
                        <div class="col-xs-6 col-md-5">
                            @Html.DropDownListFor(model => model.id_proceso_benchmark, Model.Procesos, Strings.getMSG("SubProcesoBenchmarkCreate004"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("EventoRiesgoCreate006")})
                            <span id="cargando-procesos" style="display: none;">@Strings.getMSG("EventoRiesgoCreate010")</span>
                            @Html.ValidationMessageFor(model => model.id_proceso_benchmark, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("SubProcesoBenchmarkIndex001")</label>
                        <div class="col-xs-6 col-md-5">
                            @Html.DropDownListFor(model => model.id_sub_proceso_benchmark, Model.SubProcesos, Strings.getMSG("EventoRiesgoCreate003"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("BenchmarkCreate003") })
                            <span id="cargando-sub-procesos" style="display: none;">@Strings.getMSG("EventoRiesgoCreate010")</span>
                            @Html.ValidationMessageFor(model => model.id_sub_proceso_benchmark, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("EventoRiesgoIndex001")</label>
                        <div class="col-xs-6 col-md-5">
                            @Html.DropDownListFor(model => model.id_evento_riesgo, Model.EventosRiesgo, Strings.getMSG("EventoRiesgoCreate011"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("BenchmarkCreate004")})
                            <span id="cargando-eventos-riesgo" style="display: none;">@Strings.getMSG("EventoRiesgoCreate010")</span>
                            @Html.ValidationMessageFor(model => model.id_evento_riesgo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("SP")</label>
                        <div class="col-xs-6 col-md-5">
                            <div class="input-group">
                                <input class="form-control text-box single-line" disabled id="subproceso" type="text" value="">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("BenchmarkCreate005")" onclick="trigg('SPS')">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.id_sub_proceso, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <center>
                <button type="button" class="btn btn-default btn-xs" disabled="">
                    <span class="glyphicon glyphicon-arrow-left"></span> @Strings.getMSG("Anterior")
                </button>
                |
                <button type="button" class="btn btn-default btn-xs" onclick="trigg('SPS')">
                    @Strings.getMSG("Siguiente")  <span class="glyphicon glyphicon-arrow-right"></span>
                </button>
            </center>

            <br><br>
            <div class="row">
                <div class="form-group has-error">
                    <div class="col-xs-offset-2 col-xs-6 col-md-5">
                        <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" disabled/>
                        @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane" id="SubProcesos">
            <br />
            <table id="results" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="search">@Strings.getMSG("Entidad")</th>
                        <th class="search">@Strings.getMSG("MP")</th>
                        <th class="search">@Strings.getMSG("P")</th>
                        <th class="search">@Strings.getMSG("SP")</th>
                        <th width="75"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Sub_Procesos)
                    {
                        <tr>
                            <td>
                                @(item.cn_entidad)
                            </td>
                            <td>
                                @(item.cn_macro_proceso)
                                <input type="text" hidden id="@(item.id_sub_proceso)sp" value="@item.cn_sub_proceso">
                            </td>
                            <td>
                                @(item.cn_proceso)
                            </td>
                            <td>
                                @(item.cn_sub_proceso)
                            </td>
                            <td>
                                <center>
                                    <a href=# onclick="setSP(@item.id_sub_proceso)">
                                        <i class="glyphicon glyphicon-pushpin" title="@Strings.getMSG("Seleccionar Sub Proceso")"></i>
                                    </a>
                                </center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <center>
                <button type="button" class="btn btn-default btn-xs" onclick="trigg('GENERALES')">
                    <span class="glyphicon glyphicon-arrow-left"></span> @Strings.getMSG("Anterior")
                </button>
                |
                <button type="button" class="btn btn-default btn-xs" disabled="">
                    @Strings.getMSG("Siguiente") <span class="glyphicon glyphicon-arrow-right"></span>
                </button>
            </center>
        </div>
    </div>

}