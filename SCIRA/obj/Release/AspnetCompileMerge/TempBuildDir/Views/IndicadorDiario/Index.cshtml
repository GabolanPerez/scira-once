@model IEnumerable<SCIRA.Models.c_indicador_diario>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Indicadores Diarios";
}

<h2>@Strings.getMSG("Menu066")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th>@Strings.getMSG("SubProcesoCreate018")</th>
            <th>@Strings.getMSG("IndicadorCreate004")</th>
            <th>@Strings.getMSG("IndicadorCreate003")</th>
            <th>@Strings.getMSG("ContenidoGrupoCreate004")</th>
            <th>@Strings.getMSG("IndicadorIndex001")</th>
            <th width="70"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.cl_indicador_diario
                </td>
                <td>
                    @item.nb_indicador_diario
                </td>
                <td>
                    @item.ds_indicador_diario
                </td>
                <td>
                    @item.ds_denominador
                </td>
                <td>
                    @item.ds_numerador_diario
                </td>
                <td>
                    @SCIRA.Utilidades.Utilidades.getRuta(item.c_contenido_grupo)
                </td>
                <td>
                    @(item.esta_activo ? Strings.getMSG("UsuarioIndex004") : Strings.getMSG("UsuarioIndex005"))
                </td>
                <td width="60">
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_indicador_diario })">
                            <i class="fa-pencil fa" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_indicador_diario})">
                            <i class="fa-trash fa" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
