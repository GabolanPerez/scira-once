@model IEnumerable<SCIRA.Models.c_rol>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

<h2>@Strings.getMSG("RolAuditIndex001")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Agregar", "RolAudit", "", new { @class = "btn btn-default" })
</p>


<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th width="100"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_rol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_rol)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id_rol })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                    </a> |
                    <a href="@Url.Action("AsignaUsuarios", new { id = item.id_rol})">
                        <i class="fa fa-users fa-lg" title="@Strings.getMSG("Asignar Usuarios")"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_rol })">
                        <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>