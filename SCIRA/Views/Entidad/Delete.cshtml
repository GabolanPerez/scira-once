@model SCIRA.Models.c_entidad
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<button class="btn btn-circle btn-default pull-right" title="Tutorial" onclick="runTutorial();"><i class="fa fa-question fa-lg"></i></button>

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("Entidad")</h4>
    <hr />

    @if (Model.k_objeto.Count > 0)
    {
        <p style="color:darkred"> @Strings.getMSG("EntidadDelete006")@(Model.k_objeto.Count > 1 ? "n" : "") @Strings.getMSG("EntidadDelete007")@(Model.k_objeto.Count > 1 ? "s" : "") @Model.k_objeto.Count informe@(Model.k_objeto.Count > 1 ? "s" : "") @(Model.k_objeto.Count > 1 ? "y/u" : "u") oficio@(Model.k_objeto.Count > 1 ? "s" : "").</p>

        <hr />
    }

    <dl class="dl-horizontal">
        <dt>
            @Strings.getMSG("Clave")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_entidad)
        </dd>

        <dt>
            @Strings.getMSG("Nombre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_entidad)
        </dd>

        <dt>
            @Strings.getMSG("EntidadDelete002")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_usuario.nb_usuario)
        </dd>

    </dl>

    @if (ViewBag.RR.Count > 0)
    {

        <h4>@Strings.getMSG("EntidadDelete003")</h4>

        <table id="results" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Strings.getMSG("Catalogo")</th>
                    <th>@Strings.getMSG("EntidadDelete004")</th>
                    <th>@Strings.getMSG("EntidadDelete005")</th>
                    <th width="40"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.RR)
                {
                    <tr>
                        <td style="white-space: nowrap">
                            @(item.nb_catalogo)
                        </td>
                        <td>
                            @(item.cl_registro)
                        </td>
                        <td>
                            @(item.nb_registro)
                        </td>
                        <td style="white-space: nowrap">
                            <center>
                                <a href="@Url.Action(item.accion,item.controlador, new { id = item.id_registro,redirect = "Entidad/Delete/" + Model.id_entidad})">
                                    <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                                </a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (ViewBag.RR.Count == 0)
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary submit" />
                |
                @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 1 }, new { @class = "btn btn-default btn-sm return" })
            </div>
        }
    }
    else
    {
        <div>
            @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 1 }, new { @class = "btn btn-default btn-sm return" })
        </div>
    }
</div>


<script>
    //Datos del Tutorial
    var enjoyhint_script_data = [
        {
            selector: '.dl-horizontal',
            event_type: 'next',
            description: '@Utilidades.TutorialMessage("GMS0005")',
        },
        @if (ViewBag.RR.Count > 0)
        {
            @:{
            @:    selector: '#results',
            @:    event_type: 'next',
            @:    description: '@Utilidades.TutorialMessage("GMS0006")',
            @:},
        }
        else
        {
            @:{
            @:    selector: '.submit',
            @:    event_type: 'next',
            @:    description: '@Utilidades.TutorialMessage("GMS0007")',
            @:},
        }
        {
            selector: '.return',
            event_type: 'next',
            description: '@Utilidades.TutorialMessage("GMS0004")',
        },


    ];



    function scrollToE(selector) {
        $('html,body').animate({
            scrollTop: $($("#sel").val()).offset().top - $("#ofs").val()
        }, 2000);
        toastr.info(selector);
    }
</script>
