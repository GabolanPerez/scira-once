@model IEnumerable<SCIRA.Models.c_contenido_grupo>
@using SCIRA.Utilidades
@{
    bool fcf;
    int Contador;
    List<string> Claves;
    List<int?> IDs;

    try
    {
        fcf = ViewBag.fcf;
    }
    catch
    {
        fcf = false;
    }

    try
    {
        Contador = ViewBag.Contador;
    }
    catch
    {
        Contador = 0;
    }

    try
    {
        Claves = ViewBag.Claves;
    }
    catch
    {
        Claves = new List<string>();
    }

    try
    {
        IDs = ViewBag.IDs;
    }
    catch
    {
        IDs = new List<int?>();
    }
}
<script src="~/Scripts/sharedScripts.js"></script>
<br />

<h4>
    @if (Contador != 0)
    {
        @(Strings.getMSG("IndicadorDiarioCreate013"))
        for (int i = Contador; i > 0; i--)
        {
            <span><a href=#null onclick="loadContent(@IDs[i - 1])"> @Claves[i - 1] </a> >> </span>
        }
    }
    else
    {
        @:@Strings.getMSG("IndicadorDiarioCreate012")
    }
</h4>


<table class="results table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th width="100"></th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href=#null onclick='loadContent(@item.id_contenido_grupo)'>
                        @item.cl_contenido_grupo
                    </a>
                </td>
                <td>
                    <a href=#null onclick='loadContent(@item.id_contenido_grupo)'>
                        @item.ds_contenido_grupo
                    </a>
                    <input type="text" hidden id="@(item.id_contenido_grupo)g" value="@item.cl_contenido_grupo">
                </td>
                <td>
                    <center>
                        <a href="#" onclick="setGroup(@item.id_contenido_grupo)">
                            <i class="glyphicon glyphicon-pushpin" title="@Strings.getMSG("Seleccionar grupo")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    @if (fcf)
    {
        @:$(document).ready(function () {
        @:  initTables("#contenido");
        @:});
    }

</script>