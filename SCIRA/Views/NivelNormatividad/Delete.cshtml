@model SCIRA.Models.c_nivel_normatividad

@{
    ViewBag.Title = "Borrar";
}

<h2>Borrar</h2>

<h3>¿Borrar el registro?</h3>
<div>
    <h4>Niveles de Normatividad</h4>
    <hr />
    @if (ViewBag.Error != null)
    {
        <span class="field-validation-error text-danger">@ViewBag.Error</span>
        <hr />
        <script>
            $(document).ready(function () {
                document.getElementById("submit").disabled = true;
            });
        </script>
    }
    else
    {
        <div class="row">
            <div class="col-xs-offset-2 col-xs-6 col-md-5">
                <p class="info">
                    Se eliminará este nivel de la Normatividad @ViewBag.nb_normatividad así como todos los contenidos que se encuentren en el mismo. Confirme para eliminar.
                </p>
            </div>
        </div>

        <hr />
    }
    
    <dl class="dl-horizontal">
        <dt>
            Clave
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_nivel_normatividad)
        </dd>

        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_nivel_normatividad)
        </dd>

        <dt>
            No. de Orden
        </dt>

        <dd>
            @Html.DisplayFor(model => model.no_orden)
        </dd>

        <dt>
            Normatividad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_normatividad.cl_normatividad) - @Html.DisplayFor(model => model.c_normatividad.nb_normatividad)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "NivelNormatividad",FormMethod.Post,new { id = Model.id_nivel_normatividad } ))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-primary" id="submit" /> |
            @Html.ActionLink("Regresar", "Index", "Area", new { @class = "btn btn-default" })
        </div>
    }
</div>
