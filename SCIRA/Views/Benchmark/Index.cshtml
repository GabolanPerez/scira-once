@model IEnumerable<SCIRA.Models.k_benchmarck>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Benchmark";
}



<!-- Modal -->

<div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h2 class="modal-title" id="gridModalLabel" style="color: #fff;">@Strings.getMSG("Aviso")</h2>
                </center>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <table class="table table-hover table-responsive table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                <center>@Strings.getMSG("BenchmarkIndex001")</center>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entidad in ViewBag.Entidades)
                        {
                            <tr>
                                <td>
                                    <center>
                                        <a href="@Url.Action("Create", new { id = entidad.id_entidad})">
                                            @entidad.cl_entidad - @entidad.nb_entidad
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Strings.getMSG("Cancelar")</button>
            </div>
        </div>
    </div>
</div>

<!--Fin del Modal -->





<h2>@Strings.getMSG("Menu117")</h2>

<p>
    <input type="button" class="btn btn-default btn-sm" value="@Strings.getMSG("Agregar")" onclick="$('#aviso').modal('show');"/>
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">
                @Strings.getMSG("Entidad")
            </th>
            <th>
                @Strings.getMSG("MP")
            </th>
            <th>
                @Strings.getMSG("P")
            </th>
            <th>
                @Strings.getMSG("SP")
            </th>
            <th>
                @Strings.getMSG("ActividadIndex001")
            </th>
            <th>
                @Strings.getMSG("ProcesoBenchmarkIndex001")
            </th>
            <th>
                @Strings.getMSG("SubProcesoBenchmarkIndex001")
            </th>
            <th>
                @Strings.getMSG("EventoRiesgoIndex001")
            </th>
            <th width="60"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.c_sub_proceso.c_proceso.c_macro_proceso.c_entidad.cl_entidad) - @Html.DisplayFor(modelItem => item.c_sub_proceso.c_proceso.c_macro_proceso.c_entidad.nb_entidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_sub_proceso.c_proceso.c_macro_proceso.cl_macro_proceso) - @Html.DisplayFor(modelItem => item.c_sub_proceso.c_proceso.c_macro_proceso.nb_macro_proceso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_sub_proceso.c_proceso.cl_proceso) - @Html.DisplayFor(modelItem => item.c_sub_proceso.c_proceso.nb_proceso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_sub_proceso.cl_sub_proceso) - @Html.DisplayFor(modelItem => item.c_sub_proceso.nb_sub_proceso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_evento_riesgo.c_sub_proceso_benchmark.c_proceso_benchmark.c_actividad.cl_actividad) - @Html.DisplayFor(modelItem => item.c_evento_riesgo.c_sub_proceso_benchmark.c_proceso_benchmark.c_actividad.nb_actividad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_evento_riesgo.c_sub_proceso_benchmark.c_proceso_benchmark.cl_proceso_benchmark) - @Html.DisplayFor(modelItem => item.c_evento_riesgo.c_sub_proceso_benchmark.c_proceso_benchmark.nb_proceso_benchmark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_evento_riesgo.c_sub_proceso_benchmark.cl_sub_proceso_benchmark) - @Html.DisplayFor(modelItem => item.c_evento_riesgo.c_sub_proceso_benchmark.nb_sub_proceso_benchmark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_evento_riesgo.cl_evento_riesgo) - @Html.DisplayFor(modelItem => item.c_evento_riesgo.nb_evento_riesgo)
            </td>
            <td>
                <center>
                    <a href="@Url.Action("Edit", new { id = item.id_benchmark })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_benchmark })">
                        <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                    </a>
                </center>
            </td>
        </tr>
        }
    </tbody>
</table>
