@model SCIRA.Models.c_calificacion_revision
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("CalificacionRevisionDelete002")</h4>

    <hr />

    <p class="text-danger">@Strings.getMSG("CalificacionRevisionDelete001") "@Model.nb_calificacion_revision" @Strings.getMSG("CalificacionDelete002")</p>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Strings.getMSG("Clave")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_calificacion_revision)
        </dd>

        <dt>
            @Strings.getMSG("Nombre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_calificacion_revision)
        </dd>

    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" />
            |
            @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "CalificacionRevision", new { @class = "btn btn-default" })
        </div>
    }
</div>
