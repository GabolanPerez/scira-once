@model IEnumerable<SCIRA.Controllers.CodeActionsController.ModuleVigency>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = @Strings.getMSG("CodeActionsIndex001");
}


<script>
    $(document).ready(function () {
        @if(Model.Count() > 0)
        {
            @:$("#aviso").modal("show");
        }
    });
</script>


<script src="~/Scripts/sharedScripts.js"></script>

<h2>@ViewBag.Title</h2>



<div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" id="modalH">
                <center>
                    <h2 style="color:white;">
                        @Strings.getMSG("CodeActionsIndex005")
                    </h2>
                </center>
            </div>
            <div id="modalB" class="modal-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Strings.getMSG("CodeActionsIndex006")</th>
                            <th>@Strings.getMSG("CodeActionsIndex007")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mv in Model)
                        {
                            <tr>
                                <td>@mv.ModuleCode</td>
                                <td>@mv.Vigency</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

<div class="well">
    <center>
        @Strings.getMSG("CodeActionsIndex002") <br />
        <h3><b>@ViewBag.Code</b></h3>

        @if (ViewBag.Error != null)
        {
            <br /><br />
            <h5 style="color:red;">@ViewBag.Error</h5>
        }

        <br /><br /><br /><br />

        @using (Html.BeginForm(null, null, FormMethod.Post, new { onsubmit = "deshabilitar()" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class=" form-horizontal">
                <div class="row">
                    <div class="form-group align-self-md-center">
                        <label class="control-label col-xs-3 col-md-2 col-xs-offset-2 col-md-offset-2">@Strings.getMSG("CodeActionsIndex003")</label>
                        <div class="col-xs-5 col-md-6">
                            <div class="input-group">
                                <input type="text" id="code" name="code" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("CodeActionsIndex004")">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class=" row">
                    <div class="form-group align-self-md-center">
                        <div class="col-xs-offset-6 col-md-offset-7 col-xs-6 col-md-5">
                            <input type="submit" value="@Strings.getMSG("Ejecutar")" class="btn btn-primary" id="submit" />
                        </div>
                    </div>
                </div>
            </div>

        }




        <br /><br /><br /><br />
    </center>
</div>