@model IEnumerable<SCIRA.Models.c_clasificacion_incidencia>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@{
    ViewBag.Title = "Clasificación de Incidencia";
}

<h2>@Strings.getMSG("Menu063")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", "ClasificacionIncidencia", new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th class="search">@Strings.getMSG("ClasificacionIncidenciaDelete001")</th>
            <th width="60"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_clasificacion_incidencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_clasificacion_incidencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.minimo_dias_seguimiento)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_clasificacion_incidencia})">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_clasificacion_incidencia })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
