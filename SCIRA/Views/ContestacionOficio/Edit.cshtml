@model SCIRA.Models.r_contestacion_oficio
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Editar Contestación";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>


@using (Html.BeginForm(null, null, FormMethod.Post, new { onsubmit = "deshabilitar()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("ContestacionOficioEdit001") @ViewBag.Oficio.nb_objeto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_objeto)
        @Html.HiddenFor(model => model.id_contestacion)

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ContestacionOficioContestarOficioCreate001")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.TextAreaFor(model => model.inicio_parrafo, new { @class = "form-control", @rows = "3", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("ContestacionOficioIndex008") })
                    @Html.ValidationMessageFor(model => model.inicio_parrafo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ContestacionOficioContestarOficioCreate002")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.TextAreaFor(model => model.final_parrafo, new { @class = "form-control", @rows = "3", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("ContestacionOficioContestarOficioCreate004") })
                    @Html.ValidationMessageFor(model => model.final_parrafo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>



        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}