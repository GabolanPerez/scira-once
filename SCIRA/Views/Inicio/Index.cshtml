@model SCIRA.Models.c_usuario

@{
    Layout = null;
    //bool email = false;

    bool email = (@Model.e_mail_principal != null);

    bool ActiveD = ViewBag.UseActiveD == "true";

    string action = ActiveD ? "ActiveDLogin" : "Index";

    //try
