@model SCIRA.ViewModels.CambiarContrasenaViewModel
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Cambiar contraseña";
}

<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({
            container: 'body'
        });
    });
</script>


@if (ViewBag.Mensaje != "false")
{
    <script>
        $("document").ready(function () {
            $("#aviso").modal('show');
        });
    </script>

    <div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <h2 class="modal-title" id="gridModalLabel" style="color: #fff;">@Strings.getMSG("Aviso")</h2>
                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <table class="table table-hover table-responsive table-striped table-bordered">
                        <thead>
                            <tr>
                                <th colspan="2">
                                    <center>@ViewBag.Mensaje</center>
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">@Strings.getMSG("Entendido")</button>
                </div>
            </div>
        </div>
    </div>
}


<h2>@Strings.getMSG("Menu141")</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.original_password)

    <div class="form-horizontal well">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-horizontal well">
            <h4>@Strings.getMSG("Usuario") @User.Identity.Name</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group">
                    <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("UsuarioNRChangePasswordIndex001")</label>
                    <div class="col-xs-6 col-md-5">
                        <div class="input-group">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("UsuarioNRChangePasswordIndex004")">
                                    <i class="glyphicon glyphicon-question-sign"></i>
                                </button>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("UsuarioNRChangePasswordIndex002")</label>
                    <div class="col-xs-6 col-md-5">
                        <div class="input-group">
                            @Html.EditorFor(model => model.new_password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("UsuarioNRChangePasswordIndex005")">
                                    <i class="glyphicon glyphicon-question-sign"></i>
                                </button>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.new_password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("UsuarioNRChangePasswordIndex003")</label>
                    <div class="col-xs-6 col-md-5">
                        <div class="input-group">
                            @Html.EditorFor(model => model.repeat_password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("UsuarioNRChangePasswordIndex006")">
                                    <i class="glyphicon glyphicon-question-sign"></i>
                                </button>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.repeat_password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-xs-offset-2 col-xs-6 col-md-5">
                        <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" />
                        @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "Home", "", new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}