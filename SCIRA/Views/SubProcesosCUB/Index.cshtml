@model IEnumerable<SCIRA.ViewModels.ListaSubProcesosCUBViewModel>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Sub Procesos - Normatividad";
}

<h2>@Strings.getMSG("Menu091")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "SPCUB",null, new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Strings.getMSG("SubProcesosCUBIndex001")</th>
            <th class="search">@Strings.getMSG("SP")</th>
            <th>@Strings.getMSG("SubProcesosCUBIndex002")</th>
            <th class="search">@Strings.getMSG("Menu015")</th>
            <th>@Strings.getMSG("SubProcesosCUBIndex003")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ruta_sub_proceso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cn_sub_proceso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ruta_normatividad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_normatividad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nivel_normatividad)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Delete", new { idSP = item.id_sub_proceso,idNM = item.id_normatividad})">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
