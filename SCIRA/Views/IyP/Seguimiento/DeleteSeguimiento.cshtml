<h4>@Strings.getMSG("lyPSeguimientoDelete001")</h4>

<form id="form@(ViewBag.Origen)">
    @Html.AntiForgeryToken()
    <input type="text" name="origen" value="@ViewBag.Origen" hidden />
    <input type="text" name="id" value="@Model.id_seguimiento" hidden />
</form>

<div class="row">
    <div class="form-group">
        <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("lyPSeguimientoCreate002")</label>
        <div class="col-xs-3 col-md-3">
            @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", @rows = "5", @title = "", data_trigger = "hover", data_toggle = "popover", data_content = "Descripción breve del seguimiento." })
        </div>

        <label class="control-label col-xs-offset-2 col-md-offset-2 col-xs-2 col-md-1">@Strings.getMSG("lyPSeguimientosIndex002")</label>
        <div class="col-xs-3 col-md-3">
            <div class='input-group date datetimepicker' id='datetimepicker1'>
                <input class="form-control" value="@Model.fe_seguimiento" readonly>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-6 col-md-offset-9 col-md-3">
            <input type="button" value="@Strings.getMSG("Borrar")" class="btn btn-primary" onclick="deleteSeguimientoPost(@ViewBag.Origen)" />
            <input type="button" class="btn btn-default btn-sm" onclick="indexSeguimiento(@ViewBag.Origen,@ViewBag.id_plan);" value="@Strings.getMSG("Cancelar")" />
        </div>
    </div>
</div>