<script type="text/javascript">
    $(function () {
        $("#id_entidad").change(function () {
            var selectedItem = $(this).val();
            var ddlMacroProcesos = $("#id_macro_proceso");
            var ddlProcesos = $('#id_proceso');
            var cargando = $("#cargando-macro-procesos");
            cargando.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneMacroProcesos"))",
                data: { "IdEntidad": selectedItem },
                success: function (data) {
                    ddlMacroProcesos.html('');
                    ddlMacroProcesos.append($('<option></option>').val(null).html("@Strings.getMSG("ProcesoCreate002")"))
                    $.each(data, function (id, option) {
                        ddlMacroProcesos.append($('<option></option>').val(option.id).html(option.name));
                    });
                    ddlProcesos.html('');
                    ddlProcesos.append($('<option></option>').val(null).html("@Strings.getMSG("SubProcesoCreate002")"))
                    cargando.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //alert('Error al recuperar Macro Procesos.');
                    cargando.hide();
                }
            });
        });
    });

    $(function () {
        $("#id_macro_proceso").change(function () {
            var selectedItem = $(this).val();
            var ddlStates = $("#id_proceso");
            var statesProgress = $("#cargando-procesos");
            statesProgress.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneProcesos"))",
                data: { "IdMacroProceso": selectedItem },
                success: function (data) {
                    ddlStates.html('');
                    ddlStates.append($('<option></option>').val(null).html("@Strings.getMSG("SubProcesoCreate002")"))
                    $.each(data, function (id, option) {
                        ddlStates.append($('<option></option>').val(option.id).html(option.name));
                    });
                    statesProgress.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //alert('Error al recuperar Procesos.');
                    statesProgress.hide();
                }
            });
        });
    });

    $(document).ready(function () {
        var clave = $("#cl_sub_proceso").val();
        var len = clave.length;
        clave = clave.substr(2, (len - 1));

        $("#aux").val(clave);


        $("#aux").keyup(function () {
            construyeClave();
        });

        $("#aviso").modal('show');



        @{
            Type m_tipo = null;
            PropertyInfo[] m_propiedades = null;
            m_tipo = Model.GetType();
            m_propiedades = m_tipo.GetProperties();
            for (int i = 0; i < 20; i++)
            {
                if (ViewBag.CamposExtraSubProceso[i].es_visible)
                {
                    var propiedad = m_propiedades.Where(p=>p.Name == string.Format("campo{0:00}",i+1)).First();
                    string valor = "";
                    try
                    {
                        valor = propiedad.GetValue(Model,null).ToString();
                    }
                    catch
                    {
                        valor = "";
                    }
                    @:encoded = "@valor";
                    @:decoded = $("<div/>").html(encoded).text();
                    @:$("#campo@(String.Format("{0:00}", i+1))").val(decoded);
                    @:$(".campo@(String.Format("{0:00}", i+1))").val(decoded);

                }
            }
        }
    });

    function construyeClave() {
        var numero = $("#aux").val();
        var clavef;
        clavef = "SP" + numero;
        $("#cl_sub_proceso").val(clavef);
    }
</script>


