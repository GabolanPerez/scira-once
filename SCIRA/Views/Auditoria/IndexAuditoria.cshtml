@model IEnumerable<SCIRA.Models.c_auditoria>

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Áuditorias";
}

<h2>Auditoría</h2>

<p>
    @Html.ActionLink("Agregar", "CreateAuditoria", "Auditoria", new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">Clave</th>
            <th class="search">Auditoría</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_auditoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_auditoria)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id_auditoria })">
                        <i class="glyphicon glyphicon-pencil" title="Editar"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_auditoria })">
                        <i class="glyphicon glyphicon-trash" title="Borrar"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
