@model IEnumerable<SCIRA.Models.c_centro_costo>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@{
    ViewBag.Title = "Centros de Costos";
}

<h2>@Strings.getMSG("CentroCostoCreate004")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", "CentroCosto", new { @class = "btn btn-default" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("CentroCostoCreate004")</th>
            <th class="search">@Strings.getMSG("Entidad")</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_centro_costo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_centro_costo)
                </td>
                <td>
                    @( item.c_entidad.cl_entidad + " - " + item.c_entidad.nb_entidad)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id_centro_costo })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_centro_costo })">
                        <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
