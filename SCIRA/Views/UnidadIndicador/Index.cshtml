@model IEnumerable<SCIRA.Models.c_unidad_indicador>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Unidad del Indicador";
}

<h2>@Strings.getMSG("UnidadIndicadorIndex001")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Strings.getMSG("Clave")
            </th>
            <th>
                @Strings.getMSG("Nombre")
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_unidad_indicador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_unidad_indicador)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_unidad_indicador })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_unidad_indicador })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
