@model SCIRA.Models.c_indicador_diario

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Editar";
}

<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>

<link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/MSInitialize.js"></script>



<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.id_indicador_diario)

    <ul class="nav nav-tabs">
        <li class="active"><a href="#pes1" data-toggle="tab" id="bp1"><h4>Datos del Indicador</h4></a></li>
        <li><a href="#pes2" data-toggle="tab" id="bp2"><h4>Selección del Grupo</h4></a></li>
    </ul>

    <div id="myTabContent" class="tab-content">

        <div class="tab-pane fade active in" id="pes1">
            <br />
            <div class="form-horizontal well">
                <h4>Indicador Diario</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Clave</label>
                        <div class="col-xs-6 col-md-5">
                            <div class="input-group">
                                @Html.EditorFor(model => model.cl_indicador_diario, new { htmlAttributes = new { @class = "form-control" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Corresponde al número que se le asignará al Indicador.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.cl_indicador_diario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Nombre</label>
                        <div class="col-xs-6 col-md-5">
                            <div class="input-group">
                                @Html.EditorFor(model => model.nb_indicador_diario, new { htmlAttributes = new { @class = "form-control" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Corresponde al nombre que se le dará al indicador en función de lo que se quiera que mida.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.nb_indicador_diario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Descripción</label>
                        <div class="col-xs-6 col-md-5">
                            @Html.TextAreaFor(model => model.ds_indicador_diario, new { @class = "form-control", @rows = "5", @title = "Atención", data_trigger = "hover", data_toggle = "popover", data_content = "Sobre el objetivo del indicador, deberá darse más detalle de lo que se busca con su cálculo." })
                            @Html.ValidationMessageFor(model => model.ds_indicador_diario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Descripción Numerador</label>
                        <div class="col-xs-6 col-md-5">
                            @Html.TextAreaFor(model => model.ds_numerador_diario, new { @class = "form-control", @rows = "5", @title = "Atención", data_trigger = "hover", data_toggle = "popover", data_content = "Definición clara de los elementos que componen el numerador del cálculo, indicando la fuente de donde se obtienen, si hay que hacer agrupaciones especiales o es información directa." })
                            @Html.ValidationMessageFor(model => model.ds_numerador_diario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Descripción Denominador</label>
                        <div class="col-xs-6 col-md-5">
                            @Html.TextAreaFor(model => model.ds_denominador, new { @class = "form-control", @rows = "5", @title = "Atención", data_trigger = "hover", data_toggle = "popover", data_content = "Definición clara de los elementos que componen el denominador del cálculo, indicando la fuente de donde se obtienen, si hay que hacer agrupaciones especiales o es información directa." })
                            @Html.ValidationMessageFor(model => model.ds_denominador, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Umbral Asociado a la Nota (0.0) - [Alerta]</label>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.umbral000i, new { htmlAttributes = new { @class = "form-control", @placeholder = "Límite Inferior", data_val_number = "Este campo debe ser numérico", @type = "number" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá determinar un umbral asociado a la calificación de “0.0”, este umbral será determinado por cada responsable en función a lo que se busque como nivel de tolerancia en su resultado, siendo este umbral el Límite Inferior.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.umbral000i, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-0 col-md-1"></div>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.umbral000f, new { htmlAttributes = new { @class = "form-control", @placeholder = "Límite Superior", data_val_number = "Este campo debe ser numérico", @type = "number" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá determinar un umbral asociado a la calificación de “0.0”, este umbral será determinado por cada responsable en función a lo que se busque como nivel de tolerancia en su resultado, siendo este umbral el Límite Superior.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.umbral000f, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Umbral Asociado a la Nota (0.0 a 5.0) - [Alerta]</label>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.umbral050i, new { htmlAttributes = new { @class = "form-control", @placeholder = "Límite Inferior", data_val_number = "Este campo debe ser numérico", @type = "number" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá determinar un umbral asociado a la calificación de “0.0 a 5.0”, este umbral será determinado por cada responsable en función a lo que se busque como nivel de tolerancia en su resultado, siendo este umbral el Límite Inferior.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.umbral050i, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-0 col-md-1"></div>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.umbral050f, new { htmlAttributes = new { @class = "form-control", @placeholder = "Límite Superior", data_val_number = "Este campo debe ser numérico", @type = "number" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá determinar un umbral asociado a la calificación de “0.0 a 5.0”, este umbral será determinado por cada responsable en función a lo que se busque como nivel de tolerancia en su resultado, siendo este umbral el Límite Superior.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.umbral050f, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Umbral Asociado a la Nota (5.0 a 7.5) - [Regular]</label>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.umbral075i, new { htmlAttributes = new { @class = "form-control", @placeholder = "Límite Inferior", data_val_number = "Este campo debe ser numérico", @type = "number" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá determinar un umbral asociado a la calificación de “5.0 a 7.5”, este umbral será determinado por cada responsable en función a lo que se busque como nivel de tolerancia en su resultado, siendo este umbral el Límite Inferior.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.umbral075i, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-0 col-md-1"></div>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.umbral075f, new { htmlAttributes = new { @class = "form-control", @placeholder = "Límite Superior", data_val_number = "Este campo debe ser numérico", @type = "number" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá determinar un umbral asociado a la calificación de “5.0 a 7.5”, este umbral será determinado por cada responsable en función a lo que se busque como nivel de tolerancia en su resultado, siendo este umbral el Límite Superior.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.umbral075f, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Umbral Asociado a la Nota (7.5 a 10) - [Bueno]</label>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.umbral100i, new { htmlAttributes = new { @class = "form-control", @placeholder = "Límite Inferior", data_val_number = "Este campo debe ser numérico", @type = "number" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá determinar un umbral asociado a la calificación de “7.5 a 10”, este umbral será determinado por cada responsable en función a lo que se busque como nivel de tolerancia en su resultado, siendo este umbral el Límite Inferior.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.umbral100i, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-0 col-md-1"></div>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.umbral100f, new { htmlAttributes = new { @class = "form-control", @placeholder = "Límite Superior", data_val_number = "Este campo debe ser numérico", @type = "number" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá determinar un umbral asociado a la calificación de “7.5 a 10”, este umbral será determinado por cada responsable en función a lo que se busque como nivel de tolerancia en su resultado, siendo este umbral el Límite Superior.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.umbral100f, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label class="control-label col-xs-3 col-md-2">Activo</label>
                        <div class="col-xs-3 col-md-2">
                            <div class="input-group">
                                @Html.EditorFor(model => model.esta_activo, new { htmlAttributes = new { data_toggle = "toggle", data_on = "Activo", data_off = "Inactivo", data_width = "140" } })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Para poder evaluar un indicador, éste debe encontrarse en estado Activo, de lo contrario, no se reflejará en lista de Evaluación de Indicadores.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label class="control-label col-xs-3 col-md-2">Responsables</label>
                        <div class="col-xs-6 col-md-5">
                            <div class="input-group">
                                @Html.ListBox("id_usuarios", (MultiSelectList)ViewBag.usuariosL, htmlAttributes: new { @class = "form-control selectpicker" })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Seleccione los usuarios que deberán evaluar el grupo relacionado a este indicador.">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group has-error">
                        <label class="control-label col-xs-3 col-md-2">Grupo</label>
                        <div class="col-xs-6 col-md-5">
                            <div class="input-group">
                                <input type="text" id="nb_grupo" class="form-control" readonly value="@Model.c_contenido_grupo.cl_contenido_grupo" onclick="trigg('bp2')" />
                                @Html.HiddenFor(model => model.id_contenido_grupo, htmlAttributes: new { @min = "1" })
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Seleccione el grupo que se calificará con este Indicador." onclick="trigg('bp2')">
                                        <i class="glyphicon glyphicon-question-sign"></i>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.id_contenido_grupo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-offset-2 col-xs-6 col-md-5">
                            <input type="submit" value="Guardar" class="btn btn-primary" id="submit" />
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane" id="pes2">
            <div id="contenido">
                @{Html.RenderPartial("Grupos", (object)ViewBag.Contenido_Grupo);}
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!-- #region Scripts -->
<script>
    function loadContent(id) {
        $("#contenido").load( '@(Url.Action("Contenido","IndicadorDiario",null))?id=' + id);
    }

    function setGroup(id) {
        $("#id_contenido_grupo").val(id);

        ruta = getFromURL("@Url.Action("ObtenerRutaINDD","Utilidades")/@Model.id_contenido_grupo");
        $("#nb_grupo").val(ruta);

        trigg("bp1");
    }

    $(document).ready(function () {
        document.getElementById("umbral000f").value = cppc("@Model.umbral000f.ToString()");
        document.getElementById("umbral000i").value = cppc("@Model.umbral000i.ToString()");
        document.getElementById("umbral050f").value = cppc("@Model.umbral050f.ToString()");
        document.getElementById("umbral050i").value = cppc("@Model.umbral050i.ToString()");
        document.getElementById("umbral075f").value = cppc("@Model.umbral075f.ToString()");
        document.getElementById("umbral075i").value = cppc("@Model.umbral075i.ToString()");
        document.getElementById("umbral100f").value = cppc("@Model.umbral100f.ToString()");
        document.getElementById("umbral100i").value = cppc("@Model.umbral100i.ToString()");


        ruta = getFromURL("@Url.Action("ObtenerRutaINDD","Utilidades")/@Model.id_contenido_grupo");
        $("#nb_grupo").val(ruta);
    });
</script>


<!-- #endregion -->