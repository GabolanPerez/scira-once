@model IEnumerable<SCIRA.Models.c_nivel_normatividad>
@using SCIRA.Utilidades
<script src="~/Scripts/sharedScripts.js"></script>
<script>
    $(document).ready(function () {
        initTables("#menuModal",false);

        @if (ViewBag.title != null)
        {
        @:menuModal.setTitle("@ViewBag.title");
        }
    });
</script>

<table class="results table table-bordered table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th width="250px">@Strings.getMSG("NormatividadIndex004")</th>
            <th width="250px">@Strings.getMSG("Clave")</th>
            <th width="150px">@Strings.getMSG("Nombre")</th>
            <th width="80px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.no_orden</td>
                <td>@item.cl_nivel_normatividad</td>
                <td>@item.nb_nivel_normatividad</td>
                <td>
                    <center>
                        <a onclick="editLVL(@item.id_nivel_normatividad)"><i class="fa fa-pencil" title="@Strings.getMSG("Editar Nivel")"></i></a>
                        |
                        <a onclick="showContents(@item.id_nivel_normatividad)"><i class="fa fa-sitemap" title="@Strings.getMSG("Ver Contenidos")"></i></a>
                    </center>
                </td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">
                <center>
                    <a onclick="deleteLVL(@ViewBag.id_norm)"><i class="fa fa-minus" title="@Strings.getMSG("Eliminar Nivel")"></i></a>
                    <a onclick="createLVL(@ViewBag.id_norm)"><i class="fa fa-plus" title="@Strings.getMSG("Agregar Nivel")"></i></a>
                </center>
            </td>
        </tr>
    </tfoot>
</table>


<!-- #region Scripts -->
<script>
    function createLVL(id_norm) {
        var options = {
            title: "@Strings.getMSG("Agregar Nivel")",
            size: "lg",
            show: true,
            loadUrl: "@Url.Action("CreateLVL","Normatividad")/" + id_norm
        };

        menuModal.initModal(options);
    }

    function editLVL(id_lvl) {
        var options = {
            title: "@Strings.getMSG("Editar Nivel")",
            size: "lg",
            show: true,
            loadUrl: "@Url.Action("EditLVL","Normatividad")/" + id_lvl
        };

        menuModal.initModal(options);
    }

    function deleteLVL(id_lvl) {
        var options = {
            title: "@Strings.getMSG("Borrar Nivel")",
            size: "lg",
            show: true,
            loadUrl: "@Url.Action("DeleteLVL","Normatividad")/" + id_lvl
        };

        menuModal.initModal(options);
    }
</script>
<!-- #endregion -->