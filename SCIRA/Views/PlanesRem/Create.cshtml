@model SCIRA.Models.r_seguimiento
@using SCIRA.Utilidades
@{
    /**/

    ViewBag.Title = "Agregar Entidad";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}



<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>

<script src="~/Scripts/dropzone.js"></script>
<script src="~/Scripts/dropzone-config.js"></script>
<link href="~/Content/dropzone.css" rel="stylesheet" />

<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { onsubmit = "deshabilitar()" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.id_plan)

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("Seguimiento")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-2 col-md-2">@Strings.getMSG("lyPSeguimientoCreate002")</label>
                <div class="col-xs-3 col-md-3 has-error">
                    @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", @rows = "5", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("lyPSeguimientoCreate003") })
                    @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
                </div>

                <label class="control-label col-xs-offset-2 col-md-offset-2 col-xs-2 col-md-1">@Strings.getMSG("lyPSeguimientosIndex002")</label>
                <div class="col-xs-3 col-md-3">
                    <div class='input-group date datetimepicker' id='datetimepicker1'>
                        <input class="form-control" disabled>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Seguimientos", "PlanesRem", new { id = Model.id_plan }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>

    <select multiple id="files" name="files" hidden>
    </select>
}

<h4>@Strings.getMSG("ProcesosAuditoriaEditEjecucion020")</h4>

<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Upload","Archivos")"
              class="dropzone"
              data-target="files"
              id="fileUploader"></form>
        <!--data-target es el elemento select multiple a donde se agregaran los ids de los archivos elegidos-->
        <!--el id siempre debera ser fileUploader-->
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
