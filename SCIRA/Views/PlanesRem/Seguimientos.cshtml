@model IEnumerable<SCIRA.Models.r_seguimiento>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Seguimientos";


}
<script src="~/Scripts/Certificacion.js"></script>


<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

<h2>@Strings.getMSG("lyPlanesdeRemediacionCreate016") @ViewBag.nb_plan</h2>
<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", "PlanesRem", new { id = ViewBag.id_plan }, new { @class = "btn btn-default" })
    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "PlanesRem", new { id = ViewBag.id_plan }, new { @class = "btn btn-default" })
</p>
<br />

<div class="form-horizontal well">
    <table class="results table table-bordered table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th class="search">@Strings.getMSG("lyPSeguimientoCreate002")</th>
                <th class="search">@Strings.getMSG("lyPSeguimientosIndex002")</th>
                <th width="90">@Strings.getMSG("RevisionControlRevisiones003")</th>
                <th width="100px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.observaciones</td>
                    <td>@(item.fe_seguimiento.HasValue ? item.fe_seguimiento.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td>
                        @foreach (var file in item.c_archivo)
                        {
                            <a href="@Url.Action("Download",Strings.getMSG("RevisionControlRevisiones003"), new { id = file.id_archivo})"><i class="fa fa-file@(SCIRA.Utilidades.Utilidades.getFileClass(file))" title="@file.nb_archivo"></i></a>
                        }
                        @if (item.c_archivo.Count() == 0)
                        {
                            @:@Strings.getMSG("ProcesosAuditoriaIndexEjecucion003")
                        }
                    </td>
                    <td>
                        <center>
                            <a href="@Url.Action("Edit", new { id = item.id_seguimiento })">
                                <i class="fa fa-edit" title="@Strings.getMSG("Editar")" style="font-size: 16px;"></i>
                            </a> |
                            <a href="@Url.Action("Delete", new { id = item.id_seguimiento })">
                                <i class="fa fa-trash" title="@Strings.getMSG("Borrar")" style="font-size: 16px;"></i>
                            </a>
                        </center>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>