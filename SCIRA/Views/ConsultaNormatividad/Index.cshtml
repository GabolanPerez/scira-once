@model IEnumerable<SCIRA.Models.c_tipo_normatividad>
@using SCIRA.Models;
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Consulta de Normatividad";
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<h2>@Strings.getMSG("Menu096")</h2>

@if (Model != null)
{
    <div id="accordion">
        @foreach (var tipoN in Model)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse@(tipoN.id_tipo_normatividad)">
                            @tipoN.cl_tipo_normatividad - @tipoN.nb_tipo_normatividad
                        </a>
                    </h4>
                </div>
                <div id="collapse@(tipoN.id_tipo_normatividad)" class="panel-collapse collapse">
                    <div class="panel-body">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>@Strings.getMSG("Clave")</th>
                                    <th>@Strings.getMSG("ConsultaNormatividadIndex001")</th>
                                    <th>@Strings.getMSG("NormatividadIndex003")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var norm in tipoN.c_normatividad)
                                {
                                    <tr onclick="showLVLs(@norm.id_normatividad)">
                                        <td>@norm.cl_normatividad</td>
                                        <td>@norm.nb_normatividad</td>
                                        <td>@(norm.fe_publicacion_dof.HasValue ? norm.fe_publicacion_dof.Value.ToString("dd/MM/yyyy"):"")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        }
    </div>
}


<!-- #region Scripts -->
<script>
    function showLVLs(id_norm) {

        var options = {
            title: "@Strings.getMSG("NormatividadIndex014")",
            size: "lg",
            show: true,
            loadUrl: "@Url.Action("Levels","ConsultaNormatividad")/" + id_norm
        };

        menuModal.initModal(options);
    }

    function showContents(id_lvl) {

        var options = {
            title: "@Strings.getMSG("NormatividadIndex015")",
            size: "lg",
            show: true,
            loadUrl: "@Url.Action("Content","ConsultaNormatividad")/" + id_lvl
        };

        menuModal.initModal(options);
    }

    function loadContent(id_cont) {
        var url = "@Url.Action("DescendantContent","ConsultaNormatividad")/" + id_cont;

        menuModal.setTitle("@Strings.getMSG("NormatividadIndex015")");
        menuModal.bodyLoad(url);
    }
</script>
<!-- #endregion -->