@model SCIRA.Models.k_comentario_programa_trabajo
@using SCIRA.Utilidades
@{
    ViewBag.Title = @Strings.getMSG("Borrar");
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("AuditoriaCreateComentario001")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Strings.getMSG("BDEICreate026")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.comentario)
        </dd>

        <dt>
            @Strings.getMSG("Responsable")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_responsable)
        </dd>

        <dt>
            @Strings.getMSG("lyPSeguimientosIndex002")
        </dt>

        <dd>
            @(Model.fe_comentario.ToShortDateString())
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" />
            |
            @Html.ActionLink(Strings.getMSG("Regresar"), "IndexSeguimientosPrograma", new { id = Model.idd_programa_trabajo }, new { @class = "btn btn-default btn-sm" })
        </div>
    }
    
</div>
