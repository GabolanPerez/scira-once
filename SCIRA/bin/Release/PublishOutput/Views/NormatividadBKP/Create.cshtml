@model SCIRA.ViewModels.AgregarNormatividadViewModel

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Agregar";
}

<script>
    $(document).ready(function () {
        $(".datetimepicker").datetimepicker({
            locale: 'es',
            format: '@ViewBag.DateFormat',
            minDate: "01/01/1900"
        });
    });
</script>

<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>

<script>
    $("document").ready(function () {
        $("#aviso").modal('show');
    });
</script>

<div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h2 class="modal-title" id="gridModalLabel" style="color: #fff;">Aviso</h2>
                </center>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <table class="table table-hover table-responsive table-striped table-bordered">
                    <thead>
                        <tr>
                            <th colspan="2">
                                <center>Antes de llenar, por favor validar que existan los siguientes datos:</center>
                            </th>
                        </tr>
                        <tr>
                            <th width="120">
                                <center>Campo</center>
                            </th>
                            <th>
                                <center>Catálogo</center>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--Inicio de una fila-->
                        <tr>
                            <td>
                                <center>
                                    Tipo de Normatividad:
                                </center>
                            </td>
                            <td>
                                <center>
                                    En el Catálogo de Normatividad/Tipos de Normatividades.
                                </center>
                            </td>
                        </tr>
                        <!--final de la fila-->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Entendido</button>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/base.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />

<script type="text/javascript" src="~/Scripts/moment-with-locales.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/sharedScripts.js"></script>
<h2>Agregar</h2>

@using (Html.BeginForm(Html.BeginForm("Create", "Normatividad", FormMethod.Post, new { onsubmit = "deshabilitar()" })))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal well">
    <h4>Normatividad</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">Clave de la Normatividad</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @Html.EditorFor(model => model.cl_normatividad, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Ingresar la clave que se le asignará a la Normatividad.">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.cl_normatividad, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">Nombre de la Normatividad</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @Html.EditorFor(model => model.nb_normatividad, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Ingresar el nombre de la normatividad.">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.nb_normatividad, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">Descripción de la Normatividad</label>
            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.ds_normatividad, new { @class = "form-control", @rows = "5", @title = "Atención", data_trigger = "hover", data_toggle = "popover", data_content = "Descripción detallada de la nueva normatividad." })
                @Html.ValidationMessageFor(model => model.ds_normatividad, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">Fecha de Publicación</label>
            <div class="col-xs-6 col-md-5">
                <div class='input-group date datetimepicker' id='datetimepicker1'>
                    @Html.TextBox("fe_publicacion_dof", (Model.fe_publicacion_dof == DateTime.MinValue ? System.DateTime.Now.ToString() : Model.fe_publicacion_dof.ToString()), new { @class = "form-control", @title = "Atención", data_toggle = "popover", data_trigger = "hover", data_content = "Ingresar la fecha en la que se hizo pública la normatividad por el ente gubernamental(www.dof.gob.mx).", data_val = "false" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.fe_publicacion_dof, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">Descripción de los Sectores</label>
            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.ds_sectores, new { @class = "form-control", @rows = "5", @title = "Atención", data_trigger = "hover", data_toggle = "popover", data_content = "Ingresar a que tipo de actividad económica corresponde la normatividad." })
                @Html.ValidationMessageFor(model => model.ds_sectores, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">Tipo de Normatividad</label>
            <div class="col-xs-6 col-md-5">
                @Html.DropDownList("id_tipo_normatividad", null, "-Seleccione el Tipo de Normatividad-", htmlAttributes: new { @class = "form-control", @title = "Atención", data_toggle = "popover", data_trigger = "hover", data_content = "Se deberá seleccionar la clase de Normatividad. Ejemplo: Acuerdo, Aviso, ley, Normas, Circular." })
                @Html.ValidationMessageFor(model => model.id_tipo_normatividad, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    

    <hr />

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">Clave del Nivel</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @Html.EditorFor(model => model.cl_nivel_normatividad, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Ingresar la clave que se le asignará al nivel cero de la nueva normatividad. ">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.cl_nivel_normatividad, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group has-error">
            <label class="control-label col-xs-3 col-md-2">Nombre del Nivel</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @Html.EditorFor(model => model.nb_nivel_normatividad, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Se deberá ingresar el nombre que se le asignará al nivel cero de la nueva normatividad.">
                            <i class="glyphicon glyphicon-question-sign"></i>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.nb_nivel_normatividad, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-6 col-md-5">
                <input type="submit" value="Guardar" class="btn btn-primary" id="submit" />
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}