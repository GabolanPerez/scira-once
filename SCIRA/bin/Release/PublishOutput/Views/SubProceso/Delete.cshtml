@model SCIRA.Models.c_sub_proceso
@using System.Reflection;
@using SCIRA.Models;
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    $(document).ready(function () {
        @if (Model.cl_sp_siguiente != null || Model.cl_sp_anterior != null)
        {
            string spsig = "";
            string spant = "";

            if (Model.cl_sp_siguiente != null)
            {
                spsig = "Como Sub Proceso siguiente a: " + Model.cl_sp_siguiente;
            }
            if (Model.cl_sp_anterior != null)
            {
                spant = "Como Sub Proceso anterior a: " + Model.cl_sp_anterior;
            }


            @:$("#menuModal .HeadLabel").html("Aviso de Trazabilidad");
            @:$("#menuModal .bodyContent").html("El sub proceso actual tiene <br/> @spsig <br/> @spant" );
            @:$("#menuModal").modal("show");
        }
    });

</script>


<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("SP")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Strings.getMSG("P")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_proceso.cl_proceso) - @Html.DisplayFor(model => model.c_proceso.nb_proceso)
        </dd>

        <dt>
            @Strings.getMSG("Clave")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_sub_proceso)
        </dd>

        <dt>
            @Strings.getMSG("Nombre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_sub_proceso)
        </dd>

        <dt>
            @Strings.getMSG("SubProcesoCreate018")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ds_sub_proceso)
        </dd>

        <dt>
            @Strings.getMSG("Sub Procesodelete005")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_manual)
        </dd>

        <dt>
            @Strings.getMSG("SubProcesoCreate009")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_sp_anterior)
        </dd>

        <dt>
            @Strings.getMSG("SubProcesoCreate010")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cl_sp_siguiente)
        </dd>

        <dt>
            @Strings.getMSG("Sub Procesodelete006")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ds_areas_involucradas)
        </dd>

        <dt>
            @Strings.getMSG("SubProcesoCreate017")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ds_aplicaciones_relacionadas)
        </dd>

        <dt>
            @Strings.getMSG("Sub Procesodelete007")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_archivo_manual)
        </dd>

        <dt>
            @Strings.getMSG("Sub Procesodelete008")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nb_archivo_flujo)
        </dd>

        <dt>
            @Strings.getMSG("Menu006")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_etapa.nb_etapa)
        </dd>

        <dt>
            @Strings.getMSG("Menu007")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_sub_etapa.nb_sub_etapa)
        </dd>

        <dt>
            @Strings.getMSG("Sub Procesodelete009")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_usuario.nb_usuario)
        </dd>

        <dt>
            @Strings.getMSG("Sub Procesodelete010")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.c_tipologia_sub_proceso.nb_tipologia_sub_proceso)
        </dd>

        @{
            List<c_meta_campo> lista = ViewBag.CamposExtraSubProceso;

            Type m_tipo = null;
            PropertyInfo[] m_propiedades = null;
            m_tipo = Model.GetType();
            m_propiedades = m_tipo.GetProperties();

            for (int i = 0; i < 20; i++)
            {
                var item = lista.ElementAt(i);
                if (item.es_visible)
                {
                    var prop = m_propiedades.Where(p => p.Name == string.Format("campo{0:00}", i + 1)).First();

                    <dt>
                        @item.nb_campo
                    </dt>

                    <dd>
                        @prop.GetValue(Model, null)
                    </dd>
                }
            }
        }

    </dl>

    @if (ViewBag.RR.Count > 0)
    {

        <h4>@Strings.getMSG("EntidadDelete003")</h4>

        <table id="results" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Strings.getMSG("Catalogo")</th>
                    <th>@Strings.getMSG("EntidadDelete004")</th>
                    <th>@Strings.getMSG("EntidadDelete005")</th>
                    <th width="40"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.RR)
                {
                    <tr>
                        <td style="white-space: nowrap">
                            @(item.nb_catalogo)
                        </td>
                        <td>
                            @(item.cl_registro)
                        </td>
                        <td>
                            @(item.nb_registro)
                        </td>
                        <td style="white-space: nowrap">
                            <center>
                                <a href="@Url.Action(item.accion,item.controlador, new { id = item.id_registro,redirect = "SubProceso/Delete/" + Model.id_sub_proceso})">
                                    <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                                </a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (ViewBag.RR.Count == 0)
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" />
                |
                @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 4 }, new { @class = "btn btn-default" })
            </div>
        }
    }
    else
    {
        <div>
            @Html.ActionLink(Strings.getMSG("Regresar"), "Return", "Utilidades", new { catalogo = 4 }, new { @class = "btn btn-default" })
        </div>
    }
</div>
