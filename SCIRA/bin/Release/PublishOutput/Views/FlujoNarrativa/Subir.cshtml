@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.carga;
}

<h2>@ViewBag.carga</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal well">
        <h4>@ViewBag.fon @ViewBag.nb_sub_proceso</h4>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@ViewBag.estado </label>
                <div class="col-xs-6 col-md-5">
                    <input type="text" class="form-control text-box single-line valid" readonly="readonly" value="@ViewBag.mensaje">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "FlujoNarrativa", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>

    </div>
}
