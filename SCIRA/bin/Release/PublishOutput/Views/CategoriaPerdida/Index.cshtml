@model IEnumerable<SCIRA.Models.c_categoria_perdida>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Categoría de Pérdida";
}

<h2>Categoría de Pérdida</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Clave
            </th>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_categoria_perdida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_categoria_perdida)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_categoria_perdida })">
                            <i class="glyphicon glyphicon-pencil" title="Editar"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_categoria_perdida })">
                            <i class="glyphicon glyphicon-trash" title="Borrar"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>

</table>
