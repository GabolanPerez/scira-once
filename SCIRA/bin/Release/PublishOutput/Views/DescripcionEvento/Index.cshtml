@model IEnumerable<SCIRA.Models.c_ds_evento>

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@{
    ViewBag.Title = "Descripciones de Eventos";
}

<h2>Descripciones de Eventos</h2>

<p>
    @Html.ActionLink("Agregar", "Create", "DescripcionEvento", new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">Clave</th>
            <th class="search">Descripción del Evento</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_ds_evento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ds_evento)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id_ds_evento })">
                        <i class="glyphicon glyphicon-pencil" title="Editar"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_ds_evento })">
                        <i class="glyphicon glyphicon-trash" title="Borrar"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
