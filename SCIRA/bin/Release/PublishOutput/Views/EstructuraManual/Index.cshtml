@model IEnumerable<SCIRA.Models.c_estructura_manual>
@using SCIRA.Models
@using SCIRA.Utilidades

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = Strings.getMSG("Menu093");

    List<c_nivel_manual> niveles = new List<c_nivel_manual>();
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>


<div id="accordion">
    @foreach (var estructura in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse@(estructura.id_estructura_manual)">
                        @estructura.cl_estructura_manual
                    </a>
                </h4>
            </div>
            <div id="collapse@(estructura.id_estructura_manual)" class="panel-collapse collapse @(ViewBag.IDshow == estructura.id_estructura_manual ? "in":"")">
                <div class="panel-body">

                    <p>@estructura.ds_estructura_manual</p>

                    <a href="@Url.Action("Edit", new { id = estructura.id_estructura_manual })">
                        <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar Estructura")"></i>
                    </a>
                    |
                    <a href="@Url.Action("Delete", new { id = estructura.id_estructura_manual })">
                        <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar Estructura")"></i>
                    </a>

                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>@Strings.getMSG("Clave")</th>
                                <th>@Strings.getMSG("Nombre")</th>
                                <th width="90"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int id_ultimo = 0;
                                niveles = estructura.c_nivel_manual.OrderBy(n => n.no_orden).ToList();
                            }
                            @foreach (var nivel in niveles)
                            {
                                <tr>
                                    <td>@nivel.cl_nivel_manual</td>
                                    <td>@nivel.nb_nivel_manual</td>
                                    <td>
                                        <center>
                                            <a href="@Url.Action("EditLvl", new { id = nivel.id_nivel_manual })">
                                                <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                                            </a>
                                        </center>
                                    </td>
                                </tr>
                                id_ultimo = nivel.id_nivel_manual;
                            }
                            <tr>
                                <td colspan="3">
                                    <center>
                                        @if (niveles.Count() > 0)
                                        {
                                            <a href="@Url.Action("DeleteLvl", new { id = id_ultimo })">
                                                <i class="fa fa-minus fa-5 btn-lg" title="@Strings.getMSG("Quitar un Nivel")" aria-hidden="true"></i>
                                            </a>
                                            @:|
                                        }
                                        <a href="@Url.Action("CreateLvl", new { id = estructura.id_estructura_manual })">
                                            <i class="fa fa-plus btn-lg" title="@Strings.getMSG("Agregar un Nivel")"></i>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    }
</div>














