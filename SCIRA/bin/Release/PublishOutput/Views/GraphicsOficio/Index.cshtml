@using SCIRA.Utilidades
@{
    ViewBag.Title = @Strings.getMSG("GraphicsCosteoIndex009");
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<script src="~/Scripts/chart.js"></script>
<script src="~/Scripts/graphics.js"></script>
<link href="~/Content/Extras.css" rel="stylesheet" />
<link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-select.js"></script>
<script src="~/Scripts/MSInitialize.js"></script>
<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>
<script src="~/Scripts/sharedScripts.js"></script>


<script>

    var options1 = {
        elements: {
            rectangle: {
                borderWidth: 2,
            }
        },
        responsive: true,
        legend: {
            position: 'right',
        },
        title: {
            display: true,
            text: 'Chart.js Horizontal Bar Chart'
        }
    };

    var options2 = {
        responsive: true,
        title: {
            display: true,
            text: 'title'
        }
    };

    var g0;
    var gr0;
    var tg0 = 'horizontalBar';
    var opt0 = options1;

    var g1;
    var gr1;
    var tg1 = 'bar';
    var opt1 = options2;


    //filtros para grafica general
    var entidades = [];
    var origenAutoridad = [];
    var usuarios = [];

    //Datos para la gráfica general
    var data0 = @Html.Raw(ViewBag.data0)
    var data1 = @Html.Raw(ViewBag.data1)

    $(document).ready(function () {
        g0 = $("#g0");
        gr0 = buildChart(data0, tg0, "@Strings.getMSG("GraphicsOficioIndex015")", g0, opt0);

        g1 = $("#g1");
        gr1 = buildChart(data1, tg1, "@Strings.getMSG("GraphicsOficioIndex007")", g1, opt1);

        //funciones al hacer clic en los elementos de la gráica 0;
        document.getElementById("g0").onclick = function (evt) {
            var activePoints = gr0.getElementsAtEvent(evt);
            if (activePoints[0]) {
                var chartData = activePoints[0]['_chart'].config.data;
                var idx = activePoints[0]['_index'];
                var label = chartData.labels[idx];
                //var value = chartData.datasets[0].data[idx];
                //var id = chartData.ids[idx];

                details(label, idx);
            }
        };

        document.getElementById("g1").onclick = function (evt) {
            var activePoints = gr1.getElementsAtEvent(evt);
            var firstPoint = gr1.getDatasetAtEvent(evt);

            if (activePoints[0]) {
                var chartData = activePoints[0]['_chart'].config.data;
                var idx = activePoints[0]['_index']; //Estado del oficio (Contestado 0 ,Vencido 1,Por vencer 2)
                var labelEst = chartData.labels[idx];                              //Nombre del estado

                var idClas = chartData.datasets[firstPoint[0]._datasetIndex].id;  //Id de la clasificacion
                var labelClas= chartData.datasets[firstPoint[0]._datasetIndex].label;// Nombre de la clasificación

                details2(idx, idClas, labelEst, labelClas);
            }
        };

        $('.custom-picker').on('hide.bs.dropdown', function (e) {
            var b1 = false;
            var b2 = false;
            var b3 = false;

            var nentidades = $('#entidades').val();
            var norigenAutoridad = $('#origenAutoridad').val();
            var nusuarios = $('#usuarios').val();


            if (nentidades != null) {
                nentidades.forEach(function (elemento) {
                    if (!entidades.includes(elemento)) {
                        b1 = true;
                    }
                });
                entidades.forEach(function (elemento) {
                    if (!nentidades.includes(elemento)) {
                        b1 = true;
                    }
                });
            } else {
                if (entidades.length != 0) {
                    b1 = true;
                }
                nentidades = [];
            }
            if (b1) {
                entidades = nentidades;
            }

            if (norigenAutoridad != null) {
                norigenAutoridad.forEach(function (elemento) {
                    if (!origenAutoridad.includes(elemento)) {
                        b2 = true;
                    }
                });
                origenAutoridad.forEach(function (elemento) {
                    if (!norigenAutoridad.includes(elemento)) {
                        b2 = true;
                    }
                });
            } else {
                if (origenAutoridad.length != 0) {
                    b2 = true;
                }
                norigenAutoridad = [];
            }
            if (b2) {
                origenAutoridad = norigenAutoridad;
            }

            if (nusuarios != null) {
                nusuarios.forEach(function (elemento) {
                    if (!usuarios.includes(elemento)) {
                        b3 = true;
                    }
                });
                usuarios.forEach(function (elemento) {
                    if (!nusuarios.includes(elemento)) {
                        b3 = true;
                    }
                });
            } else {
                if (usuarios.length != 0) {
                    b3 = true;
                }
                nusuarios = [];
            }
            if (b3) {
                usuarios = nusuarios;
            }

            if (b1 || b2 || b3) loadFilters();
        });

    });

    $(function () {

        $('.chbx').change(function () {
            loadFilters();
        })
    });

    function details(label,id) {
        $("#modalH").html("<center>@Strings.getMSG("GraphicsOficioIndex015")'" + label + "'");
        $("#modalB").html('<div class="row"><div class="col-md-offset-5 col-xs-offset-1 col-md-1 col-xs-1"><span id="ind1" class="IndicatorLoader centered"></span></div></div>');
        $("#aviso").modal('show');

        $("#tipoG1").val(id);

        $.ajax({
            dataType: "html",
            type: "post",
            cache: false,
            url: '@(Url.Action("Details", "GraphicsOficio"))',
            data: $("#form1").serialize(),
            success: function (data) {
                $("#modalB").html(data);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                toastr.error("@Strings.getMSG("GraphicsMRyCIndex020")");
                $("#aviso").modal('hide');
            }
        });
    }

    function details2(tipo, idClas, labelEst, labelClas) {
        $("#modalH").html("<center>@Strings.getMSG("GraphicsOficioIndex016") " + labelClas + " @Strings.getMSG("GraphicsOficioIndex017") '" + labelEst + "'");
        $("#modalB").html('<div class="row"><div class="col-md-offset-5 col-xs-offset-1 col-md-1 col-xs-1"><span id="ind1" class="IndicatorLoader centered"></span></div></div>');
        $("#aviso").modal('show');

        $("#tipoG2").val(tipo);
        $("#clasG2").val(idClas);

        $.ajax({
            dataType: "html",
            type: "post",
            cache: false,
            url: '@(Url.Action("Details2", "GraphicsOficio"))',
            data: $("#form1").serialize(),
            success: function (data) {
                $("#modalB").html(data);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                toastr.error("@Strings.getMSG("GraphicsMRyCIndex020")");
                $("#aviso").modal('hide');
            }
        });
    }


    function loadFilters() {
        $.ajax({
            dataType: "html",
            type: "post",
            cache: false,
            url: '@(Url.Action("loadFilters", "GraphicsOficio"))',
            data: $("#form1").serialize(),
            success: function (data) {
                $("#contenedor1").html(data);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                toastr.error("@Strings.getMSG("GraphicsMRyCIndex020")");
            }
        });
    }

</script>


<div id="contenedor1"></div>

<div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="font-size: 2em;" id="modalH">

            </div>
            <div id="modalB" class="modal-body">

            </div>
            <div id="modalF" class="modal-footer">

            </div>
        </div>
    </div>
</div>

<h2>@ViewBag.Title @Strings.getMSG("GraphicsOficioIndex015")</h2>




<ul class="nav nav-tabs">
    <li class="active"><a href="#pes0" data-toggle="tab"><h4>@Strings.getMSG("GraphicsOficioIndex015")<span id="ind1"></span> </h4></a></li>
    <li><a href="#pes1" data-toggle="tab"><h4>@Strings.getMSG("Incidencias")<span id="ind1"></span> </h4></a></li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="pes0">
        <div class="form-horizontal well">
            <canvas id="g0" width="424" height="212" style="width: 424px; height: 212px;"></canvas>
        </div>
    </div>

    <div class="tab-pane" id="pes1">
        <div class="form-horizontal well">
            <canvas id="g1" width="424" height="212" style="width: 424px; height: 212px;"></canvas>
        </div>
    </div>
</div>

<h4>@Strings.getMSG("Filtros")</h4>
<form id="form1">
    <div class="form-horizontal">
        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-1">@Strings.getMSG("Entidad")</label>
                <div class="col-xs-3 col-md-3">
                    <div class="input-group">
                        @Html.ListBox("entidades", (MultiSelectList)ViewBag.entidades, htmlAttributes: new { @class = "form-control selectpicker custom-picker" })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("GraphicsMRyCIndex007")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-1">@Strings.getMSG("GraphicsOficioIndex005")</label>
                <div class="col-xs-3 col-md-3">
                    <div class="input-group">
                        @Html.ListBox("origenAutoridad", (MultiSelectList)ViewBag.origenAutoridad, htmlAttributes: new { @class = "form-control selectpicker custom-picker" })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("GraphicsMRyCIndex007")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-1">@Strings.getMSG("Usuario")</label>
                <div class="col-xs-3 col-md-3">
                    <div class="input-group">
                        @Html.ListBox("usuarios", (MultiSelectList)ViewBag.usuarios, htmlAttributes: new { @class = "form-control selectpicker custom-picker" })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("GraphicsMRyCIndex007")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="form-group" id="chbx">
                <label class="control-label col-xs-3 col-md-1">@Strings.getMSG("UOI")</label>
                <div class="col-xs-3 col-md-3">
                    <div class="input-group">
                        <input type="checkbox" class="chbx" id="check1" name="check1" data-toggle="toggle" data-on="@Strings.getMSG("Unir")" data-off="@Strings.getMSG("Intersectar")" data-width="232" />
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("GraphicsMRyCIndex010")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <input type="text" hidden id="tipoG1" name="tipoG1" />
    <input type="text" hidden id="tipoG2" name="tipoG2" />
    <input type="text" hidden id="clasG2" name="clasG2" />
</form>




