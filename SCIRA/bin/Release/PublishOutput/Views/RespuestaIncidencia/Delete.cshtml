@model SCIRA.Models.r_respuesta
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Responder Incidencia";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<link href="~/Content/AnimacionCarga.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>
<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>
<script src="~/Scripts/Certificacion.js"></script>

<script>
    $("document").ready(function () {
        $("#aviso").modal('show');
    });

    function loading() {
        deshabilitar();
        $("body").addClass('loading');
    }
</script>

<div class="form-horizontal well">
    <h4>@Strings.getMSG("Responder Incidencia") @ViewBag.Incidencia.id_incidencia</h4>
    <hr />

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("RespuestaIncidenciaResponderIncidenciaCreate001")</label>
            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.contestacion, new { @class = "form-control", @rows = "3", @title = "", data_toggle = "popover", data_trigger = "hover", data_content = "", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.contestacion, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("RevisionControlCreate010")</label>
            <div class="col-xs-6 col-md-5">
                @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", @rows = "3", @title = "", data_toggle = "popover", data_trigger = "hover", data_content = "", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("RespuestaIncidenciaResponderIncidenciaCreate004")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @if (ViewBag.nb_a1 != null)
                    {
                        <input type="text" id="nb_a1" name="archivo_1" class="form-control text-box single-line valid" readonly="readonly" value="@ViewBag.nb_a1">
                    }
                    else
                    {
                        <input type="text" id="nb_a1" name="archivo_1" class="form-control text-box single-line valid" readonly="readonly">
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("RespuestaIncidenciaResponderIncidenciaCreate005")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @if (ViewBag.nb_a2 != null)
                    {
                        <input type="text" id="nb_a2" name="archivo_2" class="form-control text-box single-line valid" readonly="readonly" value="@ViewBag.nb_a2">
                    }
                    else
                    {
                        <input type="text" id="nb_a2" name="archivo_2" class="form-control text-box single-line valid" readonly="readonly">
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("RespuestaIncidenciaResponderIncidenciaCreate006")</label>
            <div class="col-xs-6 col-md-5">
                <div class="input-group">
                    @if (ViewBag.nb_a3 != null)
                    {
                        <input type="text" id="nb_a3" name="archivo_3" class="form-control text-box single-line valid" readonly="readonly" value="@ViewBag.nb_a3">
                    }
                    else
                    {
                        <input type="text" id="nb_a3" name="archivo_3" class="form-control text-box single-line valid" readonly="readonly">
                    }

                </div>
            </div>
        </div>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input hidden name="id" value="@Model.id_respuesta">

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Borrar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }




</div>