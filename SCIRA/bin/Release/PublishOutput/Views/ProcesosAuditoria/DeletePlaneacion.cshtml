@model SCIRA.Models.k_auditoria
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>@Strings.getMSG("Borrar")</h2>

<h3>@Strings.getMSG("EntidadDelete001")</h3>
<div>
    <h4>@Strings.getMSG("Menu148")</h4>
    <hr />
    <p class="text-danger">@Strings.getMSG("ProcesosAuditoriaDeletePlaneacion001")</p>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Strings.getMSG("Menu148")</dt>
        <dd>@Html.DisplayFor(model => model.c_auditoria.nb_auditoria)</dd>

        <dt>@Strings.getMSG("DivisionAuditoria001")</dt>
        <dd>@((Model.c_auditoria.id_division_auditoria ?? 0) != 0 ? Model.c_auditoria.c_division_auditoria.ds_division_auditoria : "N/A")</dd>

        <dt>@Strings.getMSG("Entidad")</dt>
        <dd>@Html.DisplayFor(model => model.c_auditoria.nb_auditoria)</dd>

        <dt>@Strings.getMSG("Area")</dt>
        <dd>@Html.DisplayFor(model => model.c_auditoria.c_area.nb_area)</dd>

        <dt>@Strings.getMSG("AuditoriaCreateUniversoAuditableCreate002")</dt>
        <dd>@Html.DisplayFor(model => model.c_auditoria.c_solicitante_auditoria.nb_solicitante_auditoria)</dd>

        <dt>@Strings.getMSG("AuditoriaCreateUniversoAuditableCreate007")</dt>
        <dd>@Html.DisplayFor(model => model.c_auditoria.es_regulada)</dd>

        <dt>@Strings.getMSG("ProcesosAuditoriaCreatePlaneacion001")</dt>
        <dd>@Html.DisplayFor(model => model.no_auditores)</dd>

        <dt>@Strings.getMSG("ProcesosAuditoriaIndexPlaneacion005")</dt>
        <dd>@Html.DisplayFor(model => model.no_horas_estimadas)</dd>

        <dt>@Strings.getMSG("ProcesosAuditoriaCreatePlaneacion002")</dt>
        <dd>@(Model.fe_inicial_planeada.Value.ToString("dd/MM/yyyy"))</dd>

        <dt>@Strings.getMSG("ProcesosAuditoriaCreatePlaneacion003")</dt>
        <dd>@(Model.fe_final_planeada.Value.ToString("dd/MM/yyyy"))</dd>

        <dt>@Strings.getMSG("ProcesosAuditoriaCreatePlaneacion004")</dt>
        <dd>@Html.DisplayFor(model => model.justificacion_incumplimiento)</dd>
    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Strings.getMSG("Borrar") class="btn btn-primary" />
            |
            @Html.ActionLink(Strings.getMSG("Regresar"), "IndexPlaneacion", "ProcesosAuditoria", new { @class = "btn btn-default btn-sm" })
        </div>
    }
</div>
