@model IEnumerable<SCIRA.Models.c_tipo_normatividad>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Tipo de Normatividad";
}

<h2>Tipo de Normatividad</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", null, new { @class = "btn btn-default btn-sm" })
</p>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">Clave</th>
            <th class="search">Nombre</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_tipo_normatividad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_tipo_normatividad)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_tipo_normatividad })">
                            <i class="glyphicon glyphicon-pencil" title="Editar"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_tipo_normatividad })">
                            <i class="glyphicon glyphicon-trash" title="Borrar"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>