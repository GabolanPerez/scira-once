@model SCIRA.Models.c_nivel_normatividad

@{
    ViewBag.Title = "Agregar";
}
<script src="~/Scripts/sharedScripts.js"></script>


<h2>Agregar</h2>

@using (Html.BeginForm("Create", "NivelNormatividad", FormMethod.Post, new { onsubmit = "deshabilitar()" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal well">
        <h4>Nivel de Normatividad para: @ViewBag.nb_normatividad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_normatividad)
        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">Clave</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_nivel_normatividad, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Ingresar la clave que se le asignará al Nivel de Normatividad, dicha clave podrá ser alfanumérica, según como lo desee la Entidad. Ejemplo: Art001, Fra002.">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_nivel_normatividad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">Nombre</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_nivel_normatividad, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="Atención" data-toggle="popover" data-trigger="hover" data-content="Ingresar la categoría a la cual corresponde el Nivel de Normatividad. Ejemplo:Título, Capítulo, Sección.">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_nivel_normatividad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="Guardar" class="btn btn-primary" id="submit" />
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}