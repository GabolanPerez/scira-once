<style type="text/css">
    .contentG11 {
        width: 50%;
        height: 50%;
        align-items: center;
        justify-content: center;
        float: left;
        display: block;
    }
</style>

<script>

    var options1 = {
        responsive: true,
        title: {
            display: true,
            text: 'title'
        }
    };

    var g0;
    var gr0;
    var tg0 = 'doughnut';
    var opt0 = options1;

    var g1;
    var gr1;
    var tg1 = 'line';
    var opt1 = options1;

    var g2;
    var gr2;
    var tg2 = 'line';
    var opt2 = options1;

    var g3;
    var gr3;
    var tg3 = 'line';
    var opt3 = options1;

    var g4;
    var gr4;
    var tg4 = 'line';
    var opt4 = options1;

    //nombre del periodo
    var nombrePeriodo = "@ViewBag.periodoActual";

    //filtros para grafica general
    var entidades = [];
    var areas = [];
    var usuarios = [];
    var periodos = [];

    //Datos para la gráfica general
    var data0 = @Html.Raw(ViewBag.data0)
    var data1 = @Html.Raw(ViewBag.data1)
    var data2 = @Html.Raw(ViewBag.data2)
    var data3 = @Html.Raw(ViewBag.data3)
    var data4 = @Html.Raw(ViewBag.data4)

        $(document).ready(function () {
            @if(ViewBag.error != null)
            {
                @:menuModal.setTitle("Aviso");
                @:$("#menuModal .partialModal").html("<center><h3>@Strings.getMSG("GraphicsIndicadorIndex009")</h3></center>");
                @:menuModal.show();
            }


        g0 = $("#g0");
        gr0 = buildChart(data0, tg0, "@Strings.getMSG("Menu009")", g0, opt0);

        g1 = $("#g1");
        gr1 = buildChart(data1, tg1, "@Strings.getMSG("GraphicsIndicadorIndex008")", g1, opt1, 'red');

        g2 = $("#g2");
        gr2 = buildChart(data2, tg2, "@Strings.getMSG("GraphicsBDEIIndex013")", g2, opt2, 'yellow');

        g3 = $("#g3");
        gr3 = buildChart(data3, tg3, "@Strings.getMSG("GraphicsBDEIIndex014")", g3, opt3, 'green');

        g4 = $("#g4");
        gr4 = buildChart(data4, tg4, "@Strings.getMSG("GraphicsBDEIIndex015")", g4, opt4, 'cornflowerblue');

        //funciones al hacer clic en los elementos de la gráica 0;
        document.getElementById("g0").onclick = function (evt) {
            var activePoints = gr0.getElementsAtEvent(evt);
            if (activePoints[0]) {
                var chartData = activePoints[0]['_chart'].config.data;
                var idx = activePoints[0]['_index'];
                var label = chartData.labels[idx];
                //var value = chartData.datasets[0].data[idx];
                //var id = chartData.ids[idx];

                details(label, idx);
            }
        };

        $('.custom-picker').on('hide.bs.dropdown', function (e) {
            var b1 = false;
            var b2 = false;
            var b3 = false;
            var b4 = false;

            var nentidades = $('#entidades').val();
            var nareas = $('#areas').val();
            var nusuarios = $('#usuarios').val();
            var nperiodos = $('#ps').val();


            if (nentidades != null) {
                nentidades.forEach(function (elemento) {
                    if (!entidades.includes(elemento)) {
                        b1 = true;
                    }
                });
                entidades.forEach(function (elemento) {
                    if (!nentidades.includes(elemento)) {
                        b1 = true;
                    }
                });
            } else {
                if (entidades.length != 0) {
                    b1 = true;
                }
                nentidades = [];
            }
            if (b1) {
                entidades = nentidades;
            }

            if (nareas != null) {
                nareas.forEach(function (elemento) {
                    if (!areas.includes(elemento)) {
                        b2 = true;
                    }
                });
                areas.forEach(function (elemento) {
                    if (!nareas.includes(elemento)) {
                        b2 = true;
                    }
                });
            } else {
                if (areas.length != 0) {
                    b2 = true;
                }
                nareas = [];
            }
            if (b2) {
                areas = nareas;
            }

            if (nusuarios != null) {
                nusuarios.forEach(function (elemento) {
                    if (!usuarios.includes(elemento)) {
                        b3 = true;
                    }
                });
                usuarios.forEach(function (elemento) {
                    if (!nusuarios.includes(elemento)) {
                        b3 = true;
                    }
                });
            } else {
                if (usuarios.length != 0) {
                    b3 = true;
                }
                nusuarios = [];
            }
            if (b3) {
                usuarios = nusuarios;
            }

            if (nperiodos != null) {
                nperiodos.forEach(function (elemento) {
                    if (!periodos.includes(elemento)) {
                        b4 = true;
                    }
                });
                periodos.forEach(function (elemento) {
                    if (!nperiodos.includes(elemento)) {
                        b4 = true;
                    }
                });
            } else {
                if (periodos.length != 0) {
                    b4 = true;
                }
                nperiodos = [];
            }
            if (b4) {
                periodos = nperiodos;
            }



            if (b1 || b2 || b3 || b4) loadFilters();
        });

    });

    $(function () {
        $('.chbx').change(function () {
            loadFilters();
        })

        $('#periodo').change(function () {
            nombrePeriodo = $("#periodo option:selected").text();
            $(".nombrePeriodo").text(nombrePeriodo);
            loadFilters();
        })
    });

    function details(label, id) {
        $("#modalH").html("<center>@Strings.getMSG("Menu009") '" + label + "' @Strings.getMSG("GraphicsBDEIIndex011")" + nombrePeriodo + "</center>");
        $("#modalB").html('<div class="row"><div class="col-md-offset-5 col-xs-offset-1 col-md-1 col-xs-1"><span id="ind1" class="IndicatorLoader centered"></span></div></div>');
        $("#aviso").modal('show');

        $("#tipo").val(id);
        $.ajax({
            dataType: "html",
            type: "post",
            cache: false,
            url: '@(Url.Action("Details", "GraphicsIndicador"))',
            data: $("#form1").serialize(),
            success: function (data) {
                $("#modalB").html(data);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                toastr.error("@Strings.getMSG("GraphicsMRyCIndex020")");
                $("#aviso").modal('hide');
            }
        });
    }

    function detailsIndicador(label, id_ind, tipo) {
        $("#modalH").html("<center>@Strings.getMSG("Cédula del Indicador")'" + label + "'@Strings.getMSG("GraphicsBDEIIndex011") " + nombrePeriodo + "</center>");
        $("#modalB").html('<div class="row"><div class="col-md-offset-5 col-xs-offset-1 col-md-1 col-xs-1"><span id="ind1" class="IndicatorLoader centered"></span></div></div>');

        $("#id_ind").val(id_ind);
        $.ajax({
            dataType: "html",
            type: "post",
            cache: false,
            url: '@(Url.Action("DetailsIndicador", "GraphicsIndicador"))',
            data: $("#form1").serialize(),
            success: function (data) {
                $("#modalB").html(data);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                toastr.error("@Strings.getMSG("GraphicsMRyCIndex020")");
                $("#aviso").modal('hide');
            }
        });
    }

    function loadFilters() {
        $.ajax({
            dataType: "html",
            type: "post",
            cache: false,
            url: '@(Url.Action("loadFilters", "GraphicsIndicador"))',
            data: $("#form1").serialize(),
            success: function (data) {
                $("#contenedor1").html(data);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                toastr.error("@Strings.getMSG("GraphicsBDEIIndex012")");
            }
        });
    }

    function toggleP(op) {
        if (op == 0) {
            $("#P").removeAttr("hidden");
            $("#PS").attr("hidden", "hidden");
        }
        if (op == 1) {
            $("#PS").removeAttr("hidden");
            $("#P").attr("hidden", "hidden");
        }
    }

</script>


<div id="contenedor1"></div>

<div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="font-size: 2em;" id="modalH">

            </div>
            <div id="modalB" class="modal-body">

            </div>
            <div id="modalF" class="modal-footer">

            </div>
        </div>
    </div>
</div>
<h2>@ViewBag.Title @Strings.getMSG("GraphicsIndicadorIndex010") <span class="nombrePeriodo">@ViewBag.periodoActual</span></h2>

<ul class="nav nav-tabs">
    <li class="active"><a href="#pes0" data-toggle="tab" onclick="toggleP(0)"><h4>@Strings.getMSG("GraphicsMRyCIndex002")<span id="ind1"></span> </h4></a></li>
    <li><a href="#pes1" data-toggle="tab" onclick="toggleP(1)"><h4>@Strings.getMSG("GraphicsIndicadorDiarioIndex002")<span id="ind1"></span> </h4></a></li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="pes0">
        <div class="form-horizontal well">
            <canvas id="g0" width="424" height="212" style="width: 424px; height: 212px;"></canvas>
        </div>
