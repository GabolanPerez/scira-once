@model SCIRA.ViewModels.AgregarRolViewModel
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
@{
    ViewBag.Title = "Agregar";
}

<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>

<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm("Create", "Rol", FormMethod.Post, new { onsubmit = "deshabilitar()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Strings.getMSG("RolCreate001")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_rol, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="focus" data-content="@Strings.getMSG("RolCreate002")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_rol, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Nombre")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_rol, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="focus" data-content="@Strings.getMSG("RolCreate003")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_rol, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ReportePersonalIndex004")</label>
            <div class="col-xs-6 col-md-5">
                @Html.ListBox("funciones", (MultiSelectList)ViewBag.funciones, htmlAttributes: new { @class = "form-control", size = "6" })
                <script>
                    $("#funciones").multipleSelect({
                        selectAll: false,
                        placeholder: "-Seleccione Funcion(es)-"
                    });
                </script>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "Rol", "", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}