@model IEnumerable<SCIRA.Models.c_macro_proceso>
@using SCIRA.Utilidades
@using SCIRA.Seguridad

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Macro Procesos";
}
<button class="btn btn-circle btn-default pull-right" title="Tutorial" onclick="runTutorial();"><i class="fa fa-question fa-lg"></i></button>

<h2><span class="catalogName">@Strings.getMSG("Menu004")</span></h2>


@if (((IdentityPersonalizado)User.Identity).Funciones.Contains("AgregarMP"))
{
    <p>
        @Html.ActionLink(Strings.getMSG("Agregar"), "Create", "MacroProceso", new { @class = "btn btn-default btn-sm add" })
    </p>
}

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("Entidad")</th>
            <th class="search">@Strings.getMSG("MP")</th>
            <th class="search">@Strings.getMSG("Responsable")</th>
            <th class="search">@Strings.getMSG("EntidadIndex001")</th>
            <th width="90"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.c_entidad.cl_entidad + " - " + item.c_entidad.nb_entidad)
                </td>
                <td>
                    @(item.cl_macro_proceso + " - " + item.nb_macro_proceso)
                </td>
                <td>
                    @(item.c_usuario.nb_usuario)
                </td>
                <td>
                    @SCIRA.Utilidades.Utilidades.PuestoUsuario(item.id_responsable)
                </td>
                <td>
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_macro_proceso })" class="edit">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_macro_proceso })" class="delete">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                        @if (item.r_macro_proceso.Count() > 0)
                        {
                            @:|
                            <a href="@Url.Action("Historial", new { id = item.id_macro_proceso })">
                                <i class="fa fa-history fa-lg" title="@Strings.getMSG("Historial de cambios")"></i>
                            </a>
                        }

                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>



<script>
    //Datos del Tutorial
    var enjoyhint_script_data = [
        {
            selector: '.catalogName',
            event_type: 'next',
            description: '@Utilidades.TutorialMessage("MPS0001")',
        },
        {
            selector: '.add:first',
            event_type: 'next',
            description: '@Utilidades.TutorialMessage("MPS0002")',
        },
        {
            selector: '#results',
            event_type: 'next',
            description: '@Utilidades.TutorialMessage("MPS0003")',
        },
        @if(Model.Count() > 0)
        {
            @:{
            @:   selector: '.edit:first',
            @:   event_type: 'next',
            @:   description: '@Utilidades.TutorialMessage("MPS0004")',
            @:},
            @:{
            @:   selector: '.delete:first',
            @:   event_type: 'next',
            @:   description: '@Utilidades.TutorialMessage("MPS0005")',
            @:},
        }
    ];
</script>
