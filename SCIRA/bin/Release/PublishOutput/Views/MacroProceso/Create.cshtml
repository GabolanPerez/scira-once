@model SCIRA.Models.c_macro_proceso
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Agregar Macro Proceso";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    $(document).ready(function () {
        var clave = $("#cl_macro_proceso").val();
        var len = clave.length;
        var prefix = clave.substr(0, 2);
        var suffix = clave.substr(2, (len - 2));
        if (prefix != "") {
            clmp(prefix);
        }
        $("#aux").val(suffix);

        $("#aux").keyup(function () {
            construyeClave();
        });

    });


    function clmp(msg) {
        $("#clave").html(msg);
        $("#claveh").val(msg);
        construyeClave();
    }

    function construyeClave() {
        var prefijo = $("#claveh").val();
        var numero = $("#aux").val();
        var clavef = prefijo + numero;
        $("#cl_macro_proceso").val(clavef);
    }
</script>

