@model SCIRA.Models.c_rango

@{
    ViewBag.Title = @Strings.getMSG("Agregar");
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@using SCIRA.Utilidades

<script src="~/Scripts/sharedScripts.js"></script>

<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm("Create", null, FormMethod.Post, new { onsubmit = "deshabilitar()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("ValoracionRiesgoindex001")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_rango, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadCosteoCreate001")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_rango, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Nombre")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_rango, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadCosteoCreate001")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_rango, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("RiesgoResidualConfigIndex030")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadCosteoCreate001")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-1 col-md-2">@Strings.getMSG("ValoracionRiesgoindex003")</label>
                <div class="col-xs-6 col-md-2">
                    <div class="input-group">
                        @Html.EditorFor(model => model.segmentacion_calificacion, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadCosteoCreate001")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.segmentacion_calificacion, "", new { @class = "text-danger" })
                </div>
                <label class="control-label col-xs-1 col-md-1">@Strings.getMSG("ValoracionRiesgoindex004")</label>
                <div class="col-xs-6 col-md-2">
                    <div class="input-group">
                        @Html.EditorFor(model => model.segmentacion_calificacion2, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ActividadCosteoCreate001")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.segmentacion_calificacion2, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>







        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Colour")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">

                        <select class="selectpicker form-control" data-live-search="true" id="cl_color_campo" name="cl_color_campo">
                            @foreach (var color in ViewBag.Colores)
                            {
                                <option value="@color.Value" style="background-color: @color.Value; color:black;">@color.Text</option>
                            }
                        </select>
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("AuditoriaCreateRatingAuditoria003")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>












        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value=@Strings.getMSG("Guardar") class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>

}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

