@model IEnumerable<SCIRA.Models.c_indicador>
@using SCIRA.Utilidades
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    ViewBag.Title = "Indicadores";
}

<h2>@Strings.getMSG("Menu009")</h2>

<p>
    @Html.ActionLink(Strings.getMSG("Agregar"), "Create", "Indicador", new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Strings.getMSG("Clave")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th class="search">@Strings.getMSG("SubProcesoCreate018")</th>
            <th>@Strings.getMSG("IndicadorIndex001")</th>
            <th>@Strings.getMSG("Area")</th>
            <th>@Strings.getMSG("Entidad")</th>
            <th>@Strings.getMSG("Menu053")</th>
            <th>@Strings.getMSG("Responsable")</th>
            <th>@Strings.getMSG("IndicadorIndex002")</th>
            <th width="70"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_indicador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_indicador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ds_indicador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.esta_activo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_area.cl_area) - @Html.DisplayFor(modelItem => item.c_area.nb_area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_entidad.cl_entidad) - @Html.DisplayFor(modelItem => item.c_entidad.nb_entidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_frecuencia_indicador.nb_frecuencia_indicador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_usuario.nb_usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.c_unidad_indicador.nb_unidad_indicador)
                </td>
                <td width="60">
                    <center>
                        <a href="@Url.Action("Edit", new { id = item.id_indicador })">
                            <i class="glyphicon glyphicon-pencil" title="@Strings.getMSG("Editar")"></i>
                        </a> |
                        <a href="@Url.Action("Delete", new { id = item.id_indicador })">
                            <i class="glyphicon glyphicon-trash" title="@Strings.getMSG("Borrar")"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>
