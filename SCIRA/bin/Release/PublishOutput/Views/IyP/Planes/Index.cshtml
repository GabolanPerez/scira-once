<br>
<br>

<h4>@Strings.getMSG("Menu128")</h4>

<p>
    <input type="button" class="btn btn-default btn-sm" value="@Strings.getMSG("Agregar")" onclick="createPlan(@ViewBag.Origen,@ViewBag.id_incidencia)" />
</p>
<br>
<table class="results table table-bordered table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("lyPlanesdeRemediacionIndex002")</th>
            <th class="search">@Strings.getMSG("Nombre")</th>
            <th class="search">@Strings.getMSG("Responsable")</th>
            <th class="search">@Strings.getMSG("lyPlanesdeRemediacionIndex001")</th>
            <th class="search">@Strings.getMSG("BDEIIndex003")</th>
            <th width="90">@Strings.getMSG("RevisionControlRevisiones003")</th>
            <th width="120px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id_plan</td>
                <td>@item.nb_plan</td>
                <td>@item.c_usuario.nb_usuario</td>
                <td>@item.c_usuario1.nb_usuario</td>
                <td>@(item.fe_alta.HasValue ? item.fe_alta.Value.ToString("dd/MM/yyyy") : "")</td>
                <td>
                    @foreach (var file in item.c_archivo)
                    {
                        <a href="@Url.Action("Download","Archivos", new { id = file.id_archivo})"><i class="fa fa-file@(SCIRA.Utilidades.Utilidades.getFileClass(file))" title="@file.nb_archivo"></i></a>
                    }
                    @if (item.c_archivo.Count() == 0)
                    {
                        @:@Strings.getMSG("ProcesosAuditoriaIndexEjecucion003")
                    }
                </td>
                <td>
                    <center>
                        <a>
                            <i class="fa fa-id-card" title="@Strings.getMSG("Ficha")" onclick="getFichaP(@item.id_plan)"></i>
                        </a> |
                        <a href="#" onclick="editPlan(@ViewBag.origen,@item.id_plan)">
                            <i class="fa fa-edit" title="@Strings.getMSG("Editar")" style="font-size: 16px;"></i>
                        </a> |
                        <a href="#" onclick="indexSeguimiento(@ViewBag.origen,@item.id_plan)">
                            <i class="fa fa-paw" title="@Strings.getMSG("Seguimiento") (@item.r_seguimiento.Count())" style="font-size: 16px;"></i>
                        </a> |
                        <a href="#" onclick="deletePlan(@ViewBag.origen,@item.id_plan)">
                            <i class="fa fa-trash" title="@Strings.getMSG("Borrar")" style="font-size: 16px;"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>    