@model IEnumerable<SCIRA.Models.k_incidencia>
@using SCIRA.Models
@using SCIRA.Utilidades
@{
    SICIEntities db = new SICIEntities();

    bool disableAdd = false;
    if (ViewBag.Origen == 1 || ViewBag.Origen == 2 || ViewBag.Origen == 3)
    {
        var oficio = db.k_objeto.Find(ViewBag.id);
        int Incidencias = Model.Count();
        int maxInc = oficio.no_incidencias;
        disableAdd = Incidencias >= maxInc;
    }
}

<script src="~/Scripts/sharedScripts.js"></script>
<script>
    $(document).ready(function () {
        initTables("#contenedor@(ViewBag.Origen)");
        $("#ind@(ViewBag.Origen)").removeClass("IndicatorLoader");
    });
</script>

@if (ViewBag.Origen == 1) //En caso de Venir desde un Oficio
{
<a href="#" onclick="indexOficio()">@Strings.getMSG("Menu127")</a> <span> >> @Strings.getMSG("lyPCreate029") @ViewBag.nb_objeto</span>
}
@if (ViewBag.Origen == 2) //En caso de Venir desde una Auditoría Externa
{
<a href="#" onclick="indexAuExt()">@Strings.getMSG("lyPIndex001")</a> <span> >> @Strings.getMSG("lyPCreate030") @ViewBag.nb_objeto</span>
}
@if (ViewBag.Origen == 3) //En caso de Venir desde una Auditoría Interna
{
<a href="#" onclick="indexAuInt()">@Strings.getMSG("lyPIndex002")</a> <span> >> @Strings.getMSG("lyPCreate030") @ViewBag.nb_objeto</span>
}
@if (ViewBag.Origen == 4) //En caso de Venir desde una Certificación
{
<a href="#" onclick="indexCert()">@Strings.getMSG("lyPCertificacionesIndex001")</a> <span> >> @Strings.getMSG("lyPCreate031") @ViewBag.nb_objeto</span>
}
@if (ViewBag.Origen == 5) //En caso de Venir desde un Control
{
<a href="#" onclick="indexMRyC()">@Strings.getMSG("Menu077")</a> <span> >> @Strings.getMSG("lyPCreate032") @ViewBag.nb_objeto</span>
}
@if (ViewBag.Origen == 6) //En caso de Venir desde una Auditoría Interna
{
<a href="#" onclick="indexOtros()">@Strings.getMSG("ReporteIyPIndex021")</a> <span> >> @Strings.getMSG("lyPCreate033") @ViewBag.nb_objeto</span>
}

<br>
<br>

<h4>@Strings.getMSG("Incidencias")</h4>

<p>
    <input type="button" class="btn btn-default btn-sm" value="@Strings.getMSG("Agregar")" onclick="createIncidencia(@ViewBag.Origen,@ViewBag.id)" @(disableAdd ? "disabled" : "") />
</p>
<br>
<table class="results table table-bordered table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th class="search">@Strings.getMSG("PendientesVerTodoIndex008")</th>
            <th class="search">@Strings.getMSG("lyPIncidenciasIndex002")</th>
            <th class="search">@Strings.getMSG("SubProcesoCreate018")</th>
            <th class="search">@Strings.getMSG("Responsable")</th>
            <th class="search">@Strings.getMSG("lyPIncidenciasIndex001")</th>
            <th class="search">@Strings.getMSG("RiesgoCreate068")</th>
            <th width="100px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string lvl = item.lvl_5 ?? item.lvl_4 ?? item.lvl_3 ?? item.lvl_2 ?? item.lvl_1 ?? "N/A";
            <tr>
                <td>@item.id_incidencia</td>
                <td>@lvl</td>
                <td>@item.ds_incidencia</td>
                <td>@item.c_usuario.nb_usuario</td>
                <td>@item.c_clasificacion_incidencia.cl_clasificacion_incidencia - @item.c_clasificacion_incidencia.nb_clasificacion_incidencia</td>
                <td>@(item.requiere_plan ? Strings.getMSG("UsuarioIndex004"): Strings.getMSG("UsuarioIndex005"))</td>
                <td>
                    <center>
                        <a>
                            <i class="fa fa-id-card" title="@Strings.getMSG("Ficha")" onclick="getFichaI(@item.id_incidencia)"></i>
                        </a> |
                        <a href="#" onclick="editIncidencia(@ViewBag.origen,@item.id_incidencia)">
                            <i class="fa fa-edit" title="@Strings.getMSG("Editar")" style="font-size: 16px;"></i>
                        </a> |
                        <a href="#" onclick="indexPlanes(@ViewBag.origen,@item.id_incidencia)">
                            <i class="fa fa-lightbulb-o" title="@Strings.getMSG("Menu128") (@item.k_plan.Count())" style="font-size: 16px;"></i>
                        </a> |
                        <a href="#" onclick="deleteIncidencia(@ViewBag.origen,@item.id_incidencia)">
                            <i class="fa fa-trash" title="@Strings.getMSG("Borrar")" style="font-size: 16px;"></i>
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>