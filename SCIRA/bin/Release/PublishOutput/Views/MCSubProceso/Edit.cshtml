@model SCIRA.Models.c_meta_campo
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Editar Campo Extra Sub Proceso";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script type="text/javascript" src="~/Scripts/sharedScripts.js"></script>
<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>

<script>
    $(document).ready(function () {
        $("#cl_tipo_campo option[value='@Model.cl_tipo_campo.ToString()']").attr("selected", true);
        $("#cl_color_borde option[value='@Model.cl_color_borde.ToString()']").attr("selected", true);
        $("#cl_color_fondo option[value='@Model.cl_color_fondo.ToString()']").attr("selected", true);
    });

</script>

<h2>@Strings.getMSG("Editar")</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="text" id="claveh" hidden="hidden" value="MP" />

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("MCSubProcesoIndex001")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_meta_campo)
        @Html.HiddenFor(model => model.cl_campo)
        @Html.HiddenFor(model => model.nb_entidad)

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <input class="form-control" id="entidad" type="text" value="@(Model.cl_campo)" disabled="">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Nombre")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_campo, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("MCSubProcesoIndex006")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_campo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MCSubProcesoEdit001")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownList("cl_tipo_campo", null, htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("MCSubProcesoEdit013") })
                    @Html.ValidationMessageFor(model => model.cl_tipo_campo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MCRiesgoEdit002")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.longitud_campo, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("MCSubProcesoEdit014")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.longitud_campo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MCSubProcesoEdit003")</label>
                <div class="col-xs-3 col-md-2">
                    <div class="input-group">
                        @Html.EditorFor(model => model.es_visible, new { htmlAttributes = new { data_toggle = "toggle", data_on = Strings.getMSG("AjustesMailIndex015"), data_off = Strings.getMSG("AjustesMailIndex016"), data_width = "140" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("MCSubProcesoEdit015")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MCSubProcesoEdit004")</label>
                <div class="col-xs-3 col-md-2">
                    <div class="input-group">
                        @Html.EditorFor(model => model.es_requerido, new { htmlAttributes = new { data_toggle = "toggle", data_on = Strings.getMSG("AjustesMailIndex015"), data_off = Strings.getMSG("AjustesMailIndex016"), data_width = "140" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("MCSubProcesoEdit016")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MCSubProcesoEdit005")</label>
                <div class="col-xs-3 col-md-2">
                    <div class="input-group">
                        @Html.EditorFor(model => model.es_editable, new { htmlAttributes = new { data_toggle = "toggle", data_on = Strings.getMSG("AjustesMailIndex015"), data_off = Strings.getMSG("AjustesMailIndex016"), data_width = "140" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("MCSubProcesoEdit017")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MCSubProcesoEdit006")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.TextAreaFor(model => model.msg_ayuda, new { @class = "form-control", @rows = "5", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("MCSubProcesoEdit019") })
                    @Html.ValidationMessageFor(model => model.msg_ayuda, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MCSubProcesoEdit007")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownList("cl_color_borde", null, htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("MCSubProcesoEdit020") })
                    @Html.ValidationMessageFor(model => model.cl_color_borde, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("MCSubProcesoEdit008")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownList("cl_color_fondo", null, htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_toggle = "popover", data_trigger = "hover", data_content = Strings.getMSG("MCSubProcesoEdit021") })
                    @Html.ValidationMessageFor(model => model.cl_color_fondo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-3 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", "MCControl", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}