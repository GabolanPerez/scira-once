    $(function () {
        $("#id_categoria_riesgo").change(function () {
            var selectedItem = $(this).val();
            var ddlTiposRiesgo = $("#id_tipo_riesgo");
            var cargandoTiposRiesgo = $("#cargando-tipos-riesgo");
            cargandoTiposRiesgo.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneTiposRiesgo"))",
                data: { "IdCategoriaRiesgo": selectedItem },
                success: function (data) {
                    ddlTiposRiesgo.html('');
                    ddlTiposRiesgo.append($('<option></option>').val(null).html("@Strings.getMSG("RiesgoRiesgos010")"))
                    $.each(data, function (id, option) {
                        ddlTiposRiesgo.append($('<option></option>').val(option.id).html(option.name));
                    });
                    cargandoTiposRiesgo.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Error al recuperar Tipos de Riesgo.');
                    cargandoTiposRiesgo.hide();
                }
            });
        });
    });

