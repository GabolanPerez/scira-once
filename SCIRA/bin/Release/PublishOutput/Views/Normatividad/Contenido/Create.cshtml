@model SCIRA.Models.c_contenido_normatividad
@using SCIRA.Utilidades;
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script>
    loadPopover();
</script>

<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormModal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@ViewBag.nb_nivel @Strings.getMSG("NormatividadCreate029") @ViewBag.padre</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_contenido_normatividad_padre)
        @Html.HiddenFor(model => model.id_nivel_normatividad)
        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_contenido_normatividad, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ContenidoGrupoCreate002")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_contenido_normatividad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("SubProcesoCreate018")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.TextAreaFor(model => model.ds_contenido_normatividad, new { @class = "form-control", @rows = "5", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("NormatividadCreate030") })
                    @Html.ValidationMessageFor(model => model.ds_contenido_normatividad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="button" value="@Strings.getMSG("Guardar")" class="btn btn-primary" onclick="createCPost();" />
                    <input type="button" value="@Strings.getMSG("Regresar")" class="btn btn-default" onclick="loadContent(@Model.id_contenido_normatividad_padre);" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<!-- #region Scripts -->
<script>
    function createCPost() {

        var url = "@Url.Action("CreateCP")";

        if ($("#FormModal").valid()) {
            executePost(url, "FormModal", "modalSucces()", "modalError()");
        } else {
            toastr.error("@Strings.getMSG("NormatividadCreate025")");
        }

    }

    function modalSucces() {
        toastr.success("@Strings.getMSG("NormatividadCreate031")");
        loadContent(@Model.id_contenido_normatividad_padre);
    }

    function modalError() {
        toastr.error("@Strings.getMSG("AuditoriaEditSeguimientoObservaciones009")");
    }

</script>
<!-- #endregion -->