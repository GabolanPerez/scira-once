@model SCIRA.ViewModels.AgregarProcesoBenchViewModel
@using SCIRA.Utilidades
@{
    ViewBag.Title = "Agregar";
}
<script src="~/Scripts/sharedScripts.js"></script>

<script>
    $("document").ready(function () {
        $("#aviso").modal('show');
    });

    $(function () {
        $("#id_entidad").change(function () {
            var selectedItem = $(this).val();
            var ddlMacroProcesos = $("#id_actividad");
            var cargando = $("#cargando-macro-procesos");
            cargando.show();
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("ObtieneMacroProcesosBenchmark"))",
                data: { "IdEntidad": selectedItem },
                success: function (data) {
                    ddlMacroProcesos.html('');
                    ddlMacroProcesos.append($('<option></option>').val(null).html("-Seleccione Macro Proceso Benchmark-"))
                    $.each(data, function (id, option) {
                        ddlMacroProcesos.append($('<option></option>').val(option.id).html(option.name));
                    });
                    cargando.hide();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    cargando.hide();
                }
            });
        });
    });

</script>

<div class="modal fade" id="aviso" tabindex="-1" role="dialog" aria-labelledby="Aviso" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h2 class="modal-title" id="gridModalLabel" style="color: #fff;">@Strings.getMSG("Aviso")</h2>
                </center>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <table class="table table-hover table-responsive table-striped table-bordered">
                    <thead>
                        <tr>
                            <th colspan="2">
                                <center>@Strings.getMSG("antesDeLlenar")</center>
                            </th>
                        </tr>
                        <tr>
                            <th width="120">
                                <center>@Strings.getMSG("Campo")</center>
                            </th>
                            <th>
                                <center>@Strings.getMSG("Catalogo")</center>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--Inicio de una fila-->
                        <tr>
                            <td>
                                <center>
                                    @Strings.getMSG("ProcesoBenchmarkCreate008")
                                </center>
                            </td>
                            <td>
                                <center>
                                    @Strings.getMSG("ProcesoBenchmarkCreate001")
                                </center>
                            </td>
                        </tr>
                        <!--final de la fila-->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Strings.getMSG("Entendido")</button>
            </div>
        </div>
    </div>
</div>

<h2>@Strings.getMSG("Agregar")</h2>

@using (Html.BeginForm("Create", null, FormMethod.Post, new { onsubmit = "deshabilitar()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well">
        <h4>@Strings.getMSG("ProcesoBenchmarkIndex001")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Entidad")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownListFor(model => model.id_entidad, Model.Entidades, Strings.getMSG("MacroProcesoCreate002"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = Strings.getMSG("ProcesoBenchmarkCreate004") })
                    @Html.ValidationMessageFor(model => model.id_entidad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("ActividadIndex001")</label>
                <div class="col-xs-6 col-md-5">
                    @Html.DropDownListFor(model => model.id_actividad, Model.MacroProcesos, Strings.getMSG("ProcesoBenchmarkCreate002"), htmlAttributes: new { @class = "form-control", @title = Strings.getMSG("Atencion"), data_trigger = "hover", data_toggle = "popover", data_content = "Seleccione el Macro Proceso de Benchmark al que será ligado este Proceso de benchmark" })
                    <span id="cargando-macro-procesos" style="display: none;">Cargando...</span>
                    @Html.ValidationMessageFor(model => model.id_actividad, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Clave")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.cl_proceso_benchmark, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ProcesoBenchmarkCreate006")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.cl_proceso_benchmark, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group has-error">
                <label class="control-label col-xs-3 col-md-2">@Strings.getMSG("Nombre")</label>
                <div class="col-xs-6 col-md-5">
                    <div class="input-group">
                        @Html.EditorFor(model => model.nb_proceso_benchmark, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" title="@Strings.getMSG("Atencion")" data-toggle="popover" data-trigger="hover" data-content="@Strings.getMSG("ProcesoBenchmarkCreate007")">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.nb_proceso_benchmark, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-6 col-md-5">
                    <input type="submit" value="@Strings.getMSG("Guardar")" class="btn btn-primary" id="submit" />
                    @Html.ActionLink(Strings.getMSG("Regresar"), "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}